{% doc %}
  @prompt
    一个用来滚动展示一些logo的楼层, 它好像被加了圆角，我不想要圆角；另外我不一定会有一个heading, 内部还是有圆角啊，你再检查一下, 不要给logo底色，而是给整个section底色
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-scroll-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-logo-scroll__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-logo-scroll__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-logo-scroll__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-logo-scroll__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.logo_spacing }}px;
    animation: ai-logo-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
    will-change: transform;
  }

  .ai-logo-scroll__track-{{ ai_gen_id }}:hover {
    animation-play-state: {% if block.settings.pause_on_hover %}paused{% else %}running{% endif %};
  }

  .ai-logo-scroll__item-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.logo_padding }}px;
    border-radius: 0;
  }

  .ai-logo-scroll__item-{{ ai_gen_id }} img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
    filter: {% if block.settings.grayscale %}grayscale(100%){% else %}none{% endif %};
    border-radius: 0;
  }

  .ai-logo-scroll__item-{{ ai_gen_id }}:hover img {
    opacity: 1;
    filter: none;
  }

  .ai-logo-scroll__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 0;
  }

  .ai-logo-scroll__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @keyframes ai-logo-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-{{ block.settings.logo_width }}px - {{ block.settings.logo_spacing }}px) * {{ block.settings.logo_count }});
    }
  }

  @media screen and (max-width: 749px) {
    .ai-logo-scroll__item-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.7 }}px;
      height: {{ block.settings.logo_height | times: 0.7 }}px;
    }

    .ai-logo-scroll__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-logo-scroll-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logo-scroll__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-logo-scroll__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-logo-scroll__wrapper-{{ ai_gen_id }}">
      <div class="ai-logo-scroll__track-{{ ai_gen_id }}">
        {% for i in (1..block.settings.logo_count) %}
          {% assign logo_key = 'logo_' | append: i %}
          {% assign logo = block.settings[logo_key] %}
          
          <div class="ai-logo-scroll__item-{{ ai_gen_id }}">
            {% if logo %}
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_width }}"
                height="{{ block.settings.logo_height }}"
              >
            {% else %}
              <div class="ai-logo-scroll__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}

        {% for i in (1..block.settings.logo_count) %}
          {% assign logo_key = 'logo_' | append: i %}
          {% assign logo = block.settings[logo_key] %}
          
          <div class="ai-logo-scroll__item-{{ ai_gen_id }}">
            {% if logo %}
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_width }}"
                height="{{ block.settings.logo_height }}"
              >
            {% else %}
              <div class="ai-logo-scroll__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

