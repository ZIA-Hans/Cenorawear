{% liquid
  capture background_classes
    if section.settings.background_overlay_opacity == 0
      echo 'no-padding'
    else
      if section.settings.background_height == 0 or section.settings.background_width == 0
        echo 'no-padding-desktop'
      endif
      if section.settings.background_height_mobile == 0 or section.settings.background_width_mobile == 0
        echo 'no-padding-mobile'
      endif
    endif
  endcapture

  unless section.settings.content_width == 2000
    capture max_width_styling
      echo ' max-width:' | append: section.settings.content_width | append: 'px; '
    endcapture
    if section.settings.text_position contains 'text-center'
      capture max_width_class
        echo ' align-center '
      endcapture
    endif
  endunless
-%}

<div
  class="m6bx richtext {{ background_classes }} {{ section.settings.width }} {{ section.settings.text_position }} size-{{ section.settings.height }} size-{{ section.settings.height_mobile }}-mobile"
  style="{% if section.settings.enable_custom_height %}--mih_desktop:{{ section.settings.custom_height }}px;{% endif %}"
>
  <div
    class="palette-{{ section.settings.color_palette }} module-color-palette img-overlay overlay-theme{% if section.settings.background_position == 'right' %} text-end{% endif %}"
    style="--mih_desktop: {{ section.settings.background_height }}%; --dist_half: {{ 100 | minus: section.settings.background_width }}%; --mih_mobile: {{ section.settings.background_height_mobile }}%; --dist_half_mobile: {{ 100 | minus: section.settings.background_width_mobile }}%; opacity:{{ section.settings.background_overlay_opacity | divided_by: 100.0 }}"
  ></div>
  <div>
    <div
      {% if settings.enable_animations %}
        data-sal="slide-up" data-sal-duration="500" data-sal-delay="250"
      {% endif %}
      class="{% if section.settings.background_color_section %}palette-{{ section.settings.color_palette }} module-color-palette{% endif %} m6bx wide static{% if section.settings.text_position contains 'text-center' %} align-center{% endif %}"
    >
      {%- for block in section.blocks -%}
        {%- liquid
          assign last = false
          if forloop.last
            assign last = true
          endif
        -%}
        {%- case block.type -%}
          {%- when 'title' -%}
            {%- if block.settings.title != empty -%}
              <header
                class="
                  {% if section.settings.text_position contains 'text-center' %}align-center {% endif %}title-styling
                  {% if block.settings.title_underline_style != 'none' %}
                    title-underline-none
                    {% if block.settings.title_underline_style contains 'accent' %}
                      title-underline-accent
                    {% elsif block.settings.title_underline_style contains 'gradient' %}
                      title-underline-gradient
                    {% endif %}
                    {% if block.settings.title_underline_style contains 'secondary_font' %}
                      title-underline-secondary-font
                    {% endif %}
                  {% endif %}
                "
                {{ block.shopify_attributes }}
                style="
                  {% if section.settings.content_width == 1280 %}
                          width: 100%;
                  {% else %}
                          max-width: 100%;
                          width:{{ section.settings.content_width }}px;
                  {% endif %}
                "
              >
                {{ block.settings.title }}
              </header>
            {%- endif %}
          {%- when 'content' -%}
            <div
              {{ block.shopify_attributes }}
              class="ff-{{ block.settings.font }} {% if block.settings.enable_custom_text_styling %}fw-{{ block.settings.font_weight }}{% endif %} margin-0 {{ max_width_class }}"
              style="{% if block.settings.enable_custom_text_styling %}--main_fz:{{ block.settings.font_size }};font-size:var(--main_fz);{% endif %} {{ max_width_styling }}"
            >
              {%- if block.settings.page != empty -%}
                {{ block.settings.page.content }}
              {%- endif %}
              {{ block.settings.text }}
            </div>
          {%- when 'button' -%}
            {% assign prev_block_index = forloop.index0 | minus: 1 %}
            {% assign next_block_index = forloop.index0 | plus: 1 %}
            {%- liquid
              assign button_color = block.settings.button_style | split: ' ' | first
              assign button_style = block.settings.button_style | split: ' ' | last
              assign is_link = false
              if button_style == 'link'
                assign is_link = true
              endif
            -%}
            {% if section.blocks[prev_block_index].type != 'button' or forloop.first %}
              <p
                class="link-btn"
                {{ block.shopify_attributes }}
                style="--dist_ba: 20px;"
              >
            {% endif %}
            {%- if block.settings.link_text != empty and block.settings.link_url != blank -%}
              <a
                href="{{ block.settings.link_url }}"
                class="overlay-{{ button_color }} {% if is_link %}strong inline{% else %}{{ button_style }}{% endif %}"
              >
                {{- block.settings.link_text }}&nbsp;
                {%- if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif -%}
              </a>
            {%- endif %}
            {% if section.blocks[next_block_index].type != 'button' %}
              </p>
            {% endif %}
          {%- when 'image' -%}
            {%- if block.settings.image -%}
              <figure class="block-image-{{ block.id }}" {{ block.shopify_attributes }}>
                {%- if block.settings.link_url != blank -%}
                  <a
                    href="{{ block.settings.link_url }}"
                    aria-label="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                  >
                {%- endif -%}
                <img
                  src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                  srcset="{% render 'image-srcset', image: block.settings.image %}"
                  sizes="(min-width: 760px) {% if block.settings.image_width == 1280 %}100vw{% else %}{{ block.settings.image_width }}px{% endif %}"
                  alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                  width="{% if block.settings.image_width == 1280 %}100%{% else %}{{ block.settings.image_width }}{% endif %}"
                  height="640"
                  {% unless section.index == 1 %}
                    loading="lazy"
                  {% endunless %}
                  {% if block.settings.image_mobile %}
                    class="mobile-hide"
                  {% endif %}
                >
                {% if block.settings.image_mobile %}
                  <img
                    src="{{ block.settings.image_mobile | image_url: width: block.settings.image_width }}"
                    srcset="{% render 'image-srcset', image: block.settings.image_mobile %}"
                    sizes="(min-width: 760px) {% if block.settings.image_width == 1280 %}100vw{% else %}{{ block.settings.image_width }}px{% endif %}"
                    alt="{{ block.settings.image_mobile.alt | default: block.settings.title | escape }}"
                    width="{% if block.settings.image_width == 1280 %}100%{% else %}{{ block.settings.image_width }}{% endif %}"
                    height="640"
                    {% unless section.index == 1 %}
                      loading="lazy"
                    {% endunless %}
                    class="mobile-only"
                  >
                {% endif %}
                {%- if block.settings.link_url != blank -%}</a>{%- endif -%}
              </figure>
            {%- endif -%}
          {%- when 'video' -%}
            {%- if block.settings.video -%}
              <div {{ block.shopify_attributes }}>
                <figure style="width: {% if block.settings.video_width == 1280 %}100%{% else %}{{ block.settings.video_width }}px{% endif %}">
                  {% if block.settings.enable_controls -%}
                    <a href="./" aria-label="{{ block.settings.title | escape | default: "Play video" }}">
                  {%- endif %}
                  <picture>
                    <span
                      class="img-overlay"
                      style="opacity:{{ block.settings.overlay_opacity_img | divided_by: 100.0 }}"
                    ></span>
                    {%- liquid
                      assign source = block.settings.video.sources | where: 'height', 1080 | where: 'format', 'mp4' | first
                      if source == null
                        assign source = block.settings.video.sources | where: 'format', 'mp4' | first
                      endif
                      if source == null
                        assign source = block.settings.video.sources | where: 'format', 'mov' | first
                      endif
                      if source == null
                        assign source = block.settings.video.sources.first
                      endif
                    -%}
                    <video
                      class="lazy next-video {% if last %}margin-0{% else %}margin-30 margin-mobile-20{% endif %}"
                      {% if block.settings.enable_controls %}
                        {%- if block.settings.video_mute %} muted{% endif -%}
                      {% else %}
                        autoplay muted
                      {% endif %}
                      loop
                      playsinline
                      poster="{{ block.settings.video.preview_image | image_url }}"
                    >
                      <source data-src="{{ source.url }}" type="video/mp4">
                    </video>
                  </picture>
                  {% if block.settings.enable_controls %}
                    <i aria-hidden="true" class="icon-play"></i>
                  {% endif %}
                  {% if block.settings.enable_controls %}</a>{% endif %}
                </figure>
              </div>
            {%- endif -%}
          {%- when 'spacer' -%}
            <style>
              @media only screen and (min-width: 47.5em) {
                #shopify-section-{{ section.id }} #block-{{ block.id }} { margin-bottom:{{ block.settings.height }}px; }
              }
              @media only screen and (max-width: 47.5em) {
                #shopify-section-{{ section.id }} #block-{{ block.id }} { margin-bottom:{{ block.settings.height_mobile }}px; }
              }
            </style>
            <div class="module-spacer" id="block-{{ block.id }}" {{ block.shopify_attributes }}></div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} .module-color-palette:before { opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}; }
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} > .m6bx { margin-bottom: {{ section.settings.spacing_desktop }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} > .m6bx { margin-bottom: {{ section.settings.spacing_mobile }}px; }
  }
</style>

