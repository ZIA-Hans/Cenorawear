{%- liquid
  case section.settings.items_width
    when 1
      assign width_class = 'width-100'
    when 2
      assign width_class = 'width-50'
    when 3
      assign width_class = ''
  endcase
  assign last_blocks = section.blocks.size | modulo: section.settings.items_width

  if section.settings.show_link and section.settings.link_text != empty and section.settings.link_url != blank
    assign link = true
  endif

  if section.settings.title != empty or section.settings.text != empty or section.settings.link_text != empty
    assign show_header = true
  endif

  capture title_classes
    if section.settings.text_alignment == 'center'
      echo ' text-center align-center'
    endif
  endcapture
-%}

{%- if link %}
  {%- capture link -%}
    {%- liquid
      assign button_color = section.settings.button_style | split: ' ' | first
      assign button_style = section.settings.button_style | split: ' ' | last
      assign is_link = false
      if button_style == 'link'
        assign is_link = true
      endif
    -%}
      <p class="class-x link-btn"><a href="{{ section.settings.link_url }}" class="overlay-{{ button_color }} {% if is_link %}inline strong{% else %}{{ button_style }}{% endif %}">{{ section.settings.link_text }}{% if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}</a></p>
  {%- endcapture %}
{%- endif -%}

<article class="m6bx wide">
  <div
    class="palette-{{ section.settings.color_palette }} module-color-palette img-overlay overlay-theme"
    style="--mih_desktop: 100%; --dist_half: 0%; --mih_mobile: 100%; --dist_half_mobile: 0%; opacity:{{ section.settings.overlay_opacity | divided_by: 100.0 }}"
  ></div>
  <div class="palette-{{ section.settings.color_palette }} module-color-palette">
    {%- if show_header -%}
      <header
        {% if settings.enable_animations %}
          data-sal="fade" data-sal-duration="500"
        {% endif %}
        class="
          {{ title_classes }} align-down cols title-styling title-main-mr
          {% if section.settings.title_underline_style != 'none' %}
            title-underline-none
            {% if section.settings.title_underline_style contains 'accent' %}
              title-underline-accent
            {% elsif section.settings.title_underline_style contains 'gradient' %}
              title-underline-gradient
            {% endif %}
            {% if section.settings.title_underline_style contains 'secondary_font' %}
              title-underline-secondary-font
            {% endif %}
          {% endif %}
        "
        {% if section.settings.enable_custom_font_styling %}
          style="font-size:{{ section.settings.font_size }};"
        {% endif %}
      >
        <div>
          {%- if section.settings.title != blank -%}
            {{ section.settings.title }}
          {%- endif -%}
          {%- if section.settings.text != empty -%}
            <p>{{ section.settings.text }}</p>
          {%- endif -%}
        </div>
        {%- if link and section.settings.text_alignment == 'start' -%}
          {{ link | replace: 'class-x', 'mobile-hide' }}
        {%- endif -%}
      </header>
    {%- endif -%}
    <ul
      class="
        {% if section.settings.testimonials_boxed_overlay_opacity == 0 %}palette-{{ section.settings.color_palette }} module-color-palette{% endif %} {% if section.settings.layout == 'slider' %}palette-{{ section.settings.color_palette }}{% endif %}
        l4ts
        {% if section.settings.testimonials_boxed_overlay_opacity > 0 %}box{% endif %}
        {% if section.settings.layout == 'slider' %}{{ width_class }} slider-aside{% else %}slider-fraction slider-mobile{% endif %}
      "
      {% if section.settings.layout == 'slider' and section.settings.autoplay %}
        data-autoplay="{{ section.settings.autoplay_seconds | times: 1000 }}"
      {% endif %}
      {% if section.settings.layout == 'slider' %}
        data-main-color-palette="palette-{{ section.settings.color_palette }}"
      {% endif %}
      {% if settings.enable_animations and section.settings.layout == 'slider' %}
        data-sal="fade" data-sal-duration="500"
      {% endif %}
    >
      {%- for block in section.blocks -%}
        {%- liquid
          assign blocks_left = forloop.length | minus: forloop.index
          if blocks_left < last_blocks
            assign width = 100 | divided_by: last_blocks
            assign different_width_class = 'width-' | append: width
          else
            assign different_width_class = false
          endif
        -%}
        <li
          class="{% if different_width_class %}{{ different_width_class }}{% else %}{{ width_class }}{% endif %}"
          {% if section.settings.layout == 'slider' %}
            data-slide-index="{{ forloop.index }}"
          {% endif %}
          {{ block.shopify_attributes }}
          {% if settings.enable_animations and section.settings.layout == 'rows' %}
            data-sal="fade" data-sal-duration="500" data-sal-delay="{{ forloop.index0 | times: 50 }}"
          {% endif %}
        >
          {%- if block.settings.author != empty or block.settings.place != empty or block.settings.image -%}
            <p class="s1us">
              {%- if block.settings.image -%}
                {%- liquid
                  assign image_width = 65
                  assign image_width_2 = image_width | times: 2
                -%}
                <img
                  src="{{ block.settings.image | image_url: width: image_width }}"
                  srcset="{{ block.settings.image | image_url: width: image_width }} 1x,{{ block.settings.image | image_url: width: image_width_2 }} 2x"
                  width="65"
                  height="65"
                  alt="{{ block.settings.image.alt | default: block.settings.author | default: "Testimonial image" | escape }}"
                  loading="lazy"
                >
              {%- elsif block.settings.initials and block.settings.author != empty -%}
                <span class="palette-{{ block.settings.initials_color_palette }} module-color-palette img">
                  {%- liquid
                    assign names = block.settings.author | split: ' '
                    if names.size > 1
                      for name in names limit: 2
                        echo name | slice: 0, 1 | upcase
                      endfor
                    else
                      echo block.settings.author | slice: 0, 2 | upcase
                    endif
                  -%}
                </span>
              {%- endif -%}
              {%- if block.settings.author != empty or block.settings.place != empty -%}
                <span>
                  {%- if block.settings.author != empty -%}
                    <span class="strong">{{ block.settings.author }}</span>
                  {%- endif %}
                  {% if block.settings.place != empty %}{{ block.settings.place }}{% endif -%}
                </span>
              {%- endif -%}
            </p>
          {%- endif -%}
          {%- if block.settings.text != empty -%}
            <blockquote class="inline">
              <p>{{ block.settings.text }}</p>
            </blockquote>
          {%- endif -%}
          <p class="r6rt" data-val="{{ block.settings.score }}" data-of="5"></p>
        </li>
      {%- endfor -%}
    </ul>
    {%- if link and section.settings.text_alignment == 'center' -%}
      {{ link | replace: 'class-x', 'text-center' }}
    {%- elsif link -%}
      {{ link | replace: 'class-x', 'mobile-only' }}
    {%- endif -%}
  </div>
</article>

<style>
  #shopify-section-{{ section.id }} .l4ts.box li:before, #shopify-section-{{ section.id }} .l4ts.s4wi.slider-aside.box .swiper-outer:before  { --op: {{ section.settings.testimonials_boxed_overlay_opacity | divided_by: 100.0 }}; }
  #shopify-section-{{ section.id }} .l4ts { --bg: var(--bg_secondary); --rt_fill: var(--{{ section.settings.color_palette_stars }}_btn_bg); }
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} .m6bx { margin-bottom: {{ section.settings.spacing_desktop }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} .m6bx { margin-bottom: {{ section.settings.spacing_mobile }}px; }
  }
</style>

