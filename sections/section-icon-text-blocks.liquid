{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{%- liquid
  assign number = section.settings.items_width | at_most: section.blocks.size
  case number
    when 1
      assign width_class = 'width-100'
    when 2
      assign width_class = 'width-50'
    when 3
      assign width_class = 'width-33'
    when 4
      assign width_class = 'width-25'
  endcase

  if section.settings.show_link and section.settings.link_text != empty and section.settings.link_url != blank
    assign link = true
  endif

  if section.settings.title != empty or section.settings.text != empty
    assign show_header = true
  elsif link and section.settings.text_alignment != 'center'
    assign show_header = true
  endif
  if section.settings.text_alignment == 'start'
    assign container_div = true
  endif

  capture title_classes
    if section.settings.text_alignment == 'center'
      echo ' text-center align-center'
    endif
  endcapture

  if section.blocks.size <= section.settings.items_width
    assign empty_icon_block = false
    assign has_icon = false
    for block in section.blocks
      if block.settings.image or block.settings.icon != 'none'
        if has_icon
          assign empty_icon_block = false
        else
          assign has_icon = true
          if block.settings.image
            assign empty_icon_block = block
          else
            assign empty_icon = 'icon-blank'
            assign empty_icon_block = block
          endif
        endif
      endif
    endfor
  endif

  capture background_classes
    if section.settings.background_overlay_opacity == 0
      echo 'no-padding'
    else
      if section.settings.background_height == 0 or section.settings.background_width == 0 or section.settings.background_overlay_opacity == 0
        echo 'no-padding-desktop'
      endif
      if section.settings.background_height_mobile == 0 or section.settings.background_width_mobile == 0 or section.settings.background_overlay_opacity == 0
        echo ' no-padding-mobile'
      endif
    endif
  endcapture
-%}

{%- if link %}
  {%- capture link -%}
    {%- liquid
      assign button_color = section.settings.button_style | split: ' ' | first
      assign button_style = section.settings.button_style | split: ' ' | last
      assign is_link = false
      if button_style == 'link'
        assign is_link = true
      endif
    -%}
      <p class="class-x link-btn"><a href="{{ section.settings.link_url }}" class="overlay-{{ button_color }} {% if is_link %}inline strong{% else %}{{ button_style }}{% endif %}">{{ section.settings.link_text }}{% if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}</a></p>
  {%- endcapture %}
{%- endif -%}

<article class="m6bx wide {{ background_classes }}">
  <div
    class="palette-{{ section.settings.color_palette }} module-color-palette img-overlay overlay-theme{% if section.settings.background_position == 'right' %} text-end{% endif %}"
    style="--mih_desktop: {{ section.settings.background_height }}%; --dist_half: {{ 100 | minus: section.settings.background_width }}%; --mih_mobile: {{ section.settings.background_height_mobile }}%; --dist_half_mobile: {{ 100 | minus: section.settings.background_width_mobile }}%; opacity:{{ section.settings.background_overlay_opacity | divided_by: 100.0 }}"
  ></div>
  <div class="{% if section.settings.background_color_section %}palette-{{ section.settings.color_palette }} module-color-palette{% endif %} {% if section.settings.text_alignment == 'next' %}cols {% endif %}margin-0">
    {%- if show_header -%}
      <header
        {% if settings.enable_animations %}
          data-sal="fade" data-sal-duration="500"
        {% endif %}
        class="
          {% if container_div %}cols{% endif %} {{ title_classes }} {% if section.settings.text_alignment == 'next' %}width-25{% else %}width-100{% endif %} title-styling
          {% if section.settings.title_underline_style != 'none' %}
            title-underline-none
            {% if section.settings.title_underline_style contains 'accent' %}
              title-underline-accent
            {% elsif section.settings.title_underline_style contains 'gradient' %}
              title-underline-gradient
            {% endif %}
            {% if section.settings.title_underline_style contains 'secondary_font' %}
              title-underline-secondary-font
            {% endif %}
          {% endif %}
        "
        {% if section.settings.enable_custom_font_styling %}
          style="font-size:{{ section.settings.font_size }};"
        {% endif %}
      >
        {%- if container_div -%}<div class="{{ title_classes }}">{%- endif -%}
        {%- if section.settings.title != empty -%}
          {{ section.settings.title }}
        {%- endif -%}
        {%- if section.settings.text != empty -%}
          <span>
            {{- section.settings.text -}}
          </span>
        {%- endif -%}
        {%- if container_div -%}</div>{%- endif -%}
        {%- if link and section.settings.text_alignment != 'center' -%}
          {{ link | replace: 'class-x', 'margin-0' }}
        {%- endif -%}
      </header>
    {%- endif -%}
    {%- if section.blocks.size > 0 -%}
      <div class="{% if section.settings.text_alignment == 'next' %}width-75{% else %}width-100{% endif %}">
        <ul
          class="l4st text-{{ section.settings.blocks_text_alignment }} text-{{ section.settings.mobile_blocks_text_alignment }}-mobile {{ width_class }}{% if section.settings.layout_mobile == 'rows' %} mobile-list{% endif %}"
          style="--gutter: {{ settings.gutter }};"
        >
          {%- for block in section.blocks -%}
            <li
              {{ block.shopify_attributes }}
              {% if settings.enable_animations %}
                data-sal="fade" data-sal-duration="500" data-sal-delay="{{ forloop.index0 | times: 50 }}"
              {% endif %}
              {% if section.settings.blocks_enable_custom_font_styling %}
                style="font-size:{{ section.settings.blocks_font_size }};"
              {% endif %}
            >
              {%- assign image_height = block.settings.image_height -%}
              {%- assign image_height_2 = block.settings.image_height | times: 2 -%}
              {% if block.settings.image -%}
                <span class="img{% if block.settings.image_dark %} dark-hide{% endif %}{% unless block.settings.image_border_radius %} square{% endunless %}">
                  {%- if settings.banners_clickable and block.settings.link_url != blank -%}
                    <a
                      href="{{ block.settings.link_url }}"
                      aria-label="{{ block.settings.title | escape | default: block.settings.image.alt | default: "Multicolumn" }}"
                    >
                  {%- endif -%}
                  <img
                    src="{{ block.settings.image | image_url: height: image_height }}"
                    srcset="{{ block.settings.image | image_url: height: image_height }} 1x,{{ block.settings.image | image_url: height: image_height_2 }} 2x"
                    height="{{ image_height }}"
                    width="{{ image_height }}"
                    style="--size:{{ image_height }}px;height:{{ image_height }}px!important"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    loading="lazy"
                  >
                  {%- if settings.banners_clickable and block.settings.link_url != blank -%}
                    </a>
                  {%- endif -%}
                </span>
                {%- if block.settings.image_dark -%}
                  <span class="img dark-only{% unless block.settings.image_border_radius %} square{% endunless %}">
                    {%- assign image_height = block.settings.image_height -%}
                    {%- assign image_height_2 = block.settings.image_height | times: 2 -%}
                    {%- if settings.banners_clickable and block.settings.link_url != blank -%}
                      <a
                        href="{{ block.settings.link_url }}"
                        aria-label="{{ block.settings.title | escape | default: block.settings.image.alt | default: "Multicolumn" }}"
                      >
                    {%- endif -%}
                    <img
                      src="{{ block.settings.image_dark | image_url: height: image_height }}"
                      srcset="{{ block.settings.image_dark | image_url: height: image_height }} 1x,{{ block.settings.image_dark | image_url: height: image_height_2 }} 2x"
                      height="{{ image_height }}"
                      width="{{ image_height }}"
                      style="--size:{{ image_height }}px;height:{{ image_height }}px!important"
                      alt="{{ block.settings.image_dark.alt | default: block.settings.title | escape }}"
                      loading="lazy"
                    >
                    {%- if settings.banners_clickable and block.settings.link_url != blank -%}
                      </a>
                    {%- endif -%}
                  </span>
                {%- endif -%}
              {%- elsif block.settings.icon != 'none' -%}
                <i
                  aria-hidden="true"
                  class="icon-{{ block.settings.icon }}"
                  style="--size:{{ image_height }}px;font-size:{{ image_height }}px;"
                >
                  {%- if settings.banners_clickable and block.settings.link_url != blank -%}
                    <a
                      href="{{ block.settings.link_url }}"
                      aria-label="{{ block.settings.title | escape | default: block.settings.icon | default: "Multicolumn" }}"
                    ></a>
                  {%- endif -%}
                </i>
              {%- elsif empty_icon_block -%}
                {%- assign image_height = empty_icon_block.settings.image_height -%}
                {%- if empty_icon == 'icon-blank' %}
                  <i
                    aria-hidden="true"
                    class="mobile-hide icon-blank"
                    style="opacity:0;--size:{{ image_height }}px;font-size:{{ image_height }}px;"
                  ></i>
                {%- else -%}
                  <span class="img mobile-hide" style="opacity:0;--size:{{ image_height }}px;">
                    <img
                      src="{{ empty_icon_block.settings.image | image_url: height: image_height }}"
                      height="{{ image_height }}"
                      width="{{ image_height }}"
                      style="height:{{ image_height }}px!important"
                      alt="{{ empty_icon_block.settings.image.alt | default: empty_icon_block.settings.title | escape }}"
                      loading="lazy"
                    >
                  </span>
                {%- endif -%}
              {%- endif -%}
              {%- if block.settings.title != blank -%}
                <{{ section.settings.blocks_title_size }} class="ff-{{ section.settings.blocks_title_font }}">
                  {{- block.settings.title -}}
                </{{ section.settings.blocks_title_size }}>
              {%- endif -%}
              {%- if block.settings.text != empty -%}{{ block.settings.text }}{%- endif -%}
              {%- if block.settings.show_link
                and block.settings.link_text != empty
                and block.settings.link_url != blank
              -%}
                {%- liquid
                  assign button_color = block.settings.button_style | split: ' ' | first
                  assign button_style = block.settings.button_style | split: ' ' | last
                  assign is_link = false
                  if button_style == 'link'
                    assign is_link = true
                  endif
                -%}
                <p class="link-btn">
                  <a
                    href="{{ block.settings.link_url }}"
                    class="overlay-{{ button_color }} {% if is_link %}strong inline{% else %}{{ button_style }}{% endif %}"
                  >
                    <span
                      {% if is_link %}
                        class="link-underline"
                      {% endif %}
                    >
                      {{- block.settings.link_text -}}
                      &nbsp;{% if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}
                    </span>
                  </a>
                </p>
              {%- endif %}
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}
  </div>
  {%- if link and section.settings.text_alignment == 'center' -%}
    {{ link | replace: 'class-x', 'margin-0 text-center' }}
  {%- elsif link and section.settings.text_alignment == 'left' -%}
    {{ link | replace: 'class-x', 'margin-0' }}
  {%- endif -%}
</article>

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} article { margin-bottom: {{ section.settings.spacing_desktop }}px; }
    #shopify-section-{{ section.id }} article.no-padding { margin-bottom: {{ section.settings.spacing_desktop | minus: 30 }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} article { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    #shopify-section-{{ section.id }} article.no-padding { margin-bottom: {{ section.settings.spacing_mobile | minus: 16 }}px; }
  }
</style>

