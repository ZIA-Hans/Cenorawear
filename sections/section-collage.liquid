{%- liquid
  case section.blocks.size
    when 1
      assign widths = 'width-100'
    when 2
      assign widths = 'width-66, width-33'
    when 3
      assign widths = 'width-50, width-25, width-25'
    when 4
      assign widths = 'width-50, width-25, width-25, width-100'
    when 5
      assign widths = 'width-50, width-25, width-25, width-66, width-33'
    when 6
      assign widths = 'width-37, width-25, width-37, width-25, width-25, width-50'
    when 7
      assign widths = 'width-37, width-25, width-37, width-25, width-25, width-50, width-100'
    when 8
      assign widths = 'width-25, width-50, width-25, width-25, width-25, width-50, width-50, width-50'
  endcase
  assign widths = widths | split: ','
  if section.settings.mirrored
    assign widths = widths | reverse
  endif

  assign last_blocks = section.blocks.size | modulo: 3

  assign ref_img = section.blocks.first.settings.image
  if section.blocks.first.settings.video
    assign ref_img = section.blocks.first.settings.video
  endif
  if section.settings.enable_custom_height
    assign padding_bottom = 0
  else
    if section.settings.height == 'adapt'
      assign padding_bottom = 1 | divided_by: ref_img.aspect_ratio | times: 100 | round: 2
    else
      assign aspect_ratio = section.settings.height | split: '/'
      assign temp = aspect_ratio[0] | append: '.0'
      assign ratio = aspect_ratio[1] | divided_by: temp | round: 2
      assign padding_bottom = ratio | times: 100 | round: 2
    endif
  endif

  if section.settings.mobile_height == 'adapt'
    if section.blocks.first.settings.image_mobile
      assign ref_img = section.blocks.first.settings.image_mobile
    endif
    assign padding_bottom_mobile = 1 | divided_by: ref_img.aspect_ratio | times: 100 | round: 2
  else
    assign aspect_ratio = section.settings.mobile_height | split: '/'
    assign temp = aspect_ratio[0] | append: '.0'
    assign ratio = aspect_ratio[1] | divided_by: temp | round: 2
    assign padding_bottom_mobile = ratio | times: 100 | round: 2
  endif
-%}

<article>
  <ul
    class="
      l4ft
      {% if section.settings.width == 'wide' %}fullwidth{% endif %}
      {% unless section.settings.image_zoom %}no-hover{% endunless %}
      {% if section.settings.layout_mobile == 'rows' %}mobile-scroll{% endif %}
    "
    style="--gutter: {{ settings.gutter }}; --spacing: {{ section.settings.space_between }}px;"
  >
    {% assign counter = 1 %}
    {%- for block in section.blocks -%}
      {%- liquid
        capture current
          cycle 1, 2
        endcapture
        assign width_class = widths[forloop.index0]
        assign img_width = width_class | remove: 'width-' | plus: 0

        assign blocks_left = forloop.length | minus: forloop.index
        assign items_per_row = 3
        if blocks_left < last_blocks
          assign items_per_row = last_blocks
        endif

        assign border_class = ''
        if counter == 1
          assign border_class = 'first-in-row'
        elsif counter == items_per_row
          assign border_class = 'last-in-row'
        endif
      -%}
      <li
        class="
          block-{{ block.id }}
          {{ block.settings.text_position }}
          {{ width_class }}
          text-{{ block.settings.text_position | split: ' ' | last }}
          {{ border_class }}
        "
        {{ block.shopify_attributes }}
        {% if settings.enable_animations %}
          data-sal="fade" data-sal-duration="500" data-sal-delay="{{ forloop.index0 | times: 100 }}"
        {% endif %}
        style="
          {% if block.settings.enable_custom_font_styling %}font-size:{{ block.settings.font_size }};{% endif %}
          --align_text: {{ block.settings.text_position | split: ' ' | first }};
          --justify_text: {{ block.settings.text_position | split: ' ' | last }};
          {% if section.settings.enable_custom_height %}
            --mih_desktop: {{ section.settings.custom_height }}px;
          {% else %}
            --aspect: {{ padding_bottom }};
          {% endif %}
          --aspect_m: {{ padding_bottom_mobile }};
        "
      >
        {%- liquid
          if counter == items_per_row
            assign counter = 1
          else
            assign counter = counter | plus: 1
          endif
          assign lazyload = true
          if section.index == 1
            if forloop.index == 1
              assign lazyload = false
            elsif forloop.index == 2 and forloop.length == 8
              assign lazyload = false
            endif
          endif
        %}
        <div
          class="
            palette-{{ block.settings.color_palette }}
            module-color-palette
            main
          "
        >
          <figure>
            {%- if block.settings.video -%}
              {% if block.settings.enable_controls -%}
                <a
                  href="./"
                  {% if block.settings.image_mobile %}
                    class="mobile-hide"
                  {% endif %}
                  aria-label="{{ block.settings.title | escape | default: "Play video" }}"
                >
              {%- endif %}
              <picture
                {% if block.settings.image_mobile %}
                  class="mobile-hide"
                {% endif %}
              >
                <span
                  class="img-overlay"
                  style="opacity:{{ block.settings.overlay_opacity | divided_by: 100.0 }}"
                ></span>
                {%- liquid
                  assign source = block.settings.video.sources | where: 'height', 1080 | where: 'format', 'mp4' | first
                  if source == null
                    assign source = block.settings.video.sources | where: 'format', 'mp4' | first
                  endif
                  if source == null
                    assign source = block.settings.video.sources | where: 'format', 'mov' | first
                  endif
                  if source == null
                    assign source = block.settings.video.sources.first
                  endif
                -%}
                <video
                  class="lazy next-video"
                  {% if block.settings.enable_controls %}
                    {%- if block.settings.video_mute %} muted{% endif -%}
                  {% else %}
                    autoplay muted
                  {% endif %}
                  loop
                  playsinline
                  poster="{{ block.settings.video.preview_image | image_url }}"
                >
                  <source data-src="{{ source.url }}" type="video/mp4">
                </video>
              </picture>
              {% if block.settings.enable_controls %}
                <i aria-hidden="true" class="icon-play {% if block.settings.image_mobile %}mobile-hide{% endif %}"></i>
              {% endif %}
              {% if block.settings.enable_controls %}</a>{% endif %}
              {% if block.settings.image_mobile %}
                <picture class="mobile-only">
                  <span
                    class="img-overlay"
                    style="opacity:{{ block.settings.overlay_opacity | divided_by: 100.0 }}"
                  ></span>
                  <img
                    src="{{ block.settings.image_mobile | image_url: width: 620 }}"
                    srcset="{% render 'image-srcset', image: block.settings.image_mobile %}"
                    sizes="(min-width: 768px) 0, {% if section.settings.layout_mobile == 'compact' %}315px{% else %}100vw{% endif %}"
                    width="620"
                    height="700"
                    alt="{{ block.settings.image_mobile.alt | default: block.settings.title | escape }}"
                    style="object-position: {{ block.settings.image.presentation.focal_point }}"
                    class="mobile-only"
                    {% if lazyload %}
                      loading="lazy"
                    {% endif %}
                  >
                </picture>
              {% endif %}
            {%- elsif block.settings.image -%}
              {% if block.settings.image_mobile %}
                <picture class="mobile-only">
                  <span
                    class="img-overlay"
                    style="opacity:{{ block.settings.overlay_opacity | divided_by: 100.0 }}"
                  ></span>
                  <img
                    src="{{ block.settings.image_mobile | image_url: width: 620 }}"
                    srcset="{% render 'image-srcset', image: block.settings.image_mobile %}"
                    sizes="(min-width: 768px) 0, {% if section.settings.layout_mobile == 'compact' %}315px{% else %}100vw{% endif %}"
                    width="620"
                    height="700"
                    alt="{{ block.settings.image_mobile.alt | default: block.settings.title | escape }}"
                    style="object-position: {{ block.settings.image.presentation.focal_point }}"
                    class="mobile-only"
                    {% if lazyload %}
                      loading="lazy"
                    {% endif %}
                  >
                </picture>
              {% endif %}
              <picture
                {% if block.settings.image_mobile %}
                  class="mobile-hide"
                {% endif %}
              >
                <span
                  class="img-overlay"
                  style="opacity:{{ block.settings.overlay_opacity | divided_by: 100.0 }}"
                ></span>
                <img
                  src="{{ block.settings.image | image_url: width: 620 }}"
                  srcset="{% render 'image-srcset', image: block.settings.image %}"
                  sizes="
                    {% if section.settings.width == 'boxed' or settings.width < 2000 %}
                     (min-width: {{ settings.width }}px) {% if img_width == 100 %}{{ settings.width }}px{% else %}calc({{ settings.width }}px * 0.{{ img_width }}){%- endif -%},
                    {% endif %}
                     (min-width: 760px) {% if img_width == 100 %}100vw{% else %}calc(100vw * 0.{{ img_width }}){%- endif -%},
                     {% if block.settings.image_mobile %}0{% else %}{% if section.settings.layout_mobile == 'compact' %}315px{% else %}100vw{% endif %}{% endif %}
                  "
                  width="620"
                  height="700"
                  alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                  style="object-position: {{ block.settings.image.presentation.focal_point }}"
                  {% if block.settings.image_mobile %}
                    class="mobile-hide"
                  {% endif %}
                  {% if lazyload %}
                    loading="lazy"
                  {% endif %}
                >
              </picture>
            {% else %}
              <picture>
                <span
                  class="img-overlay"
                  style="opacity:{{ block.settings.overlay_opacity | divided_by: 100.0 }}"
                ></span>
                {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </picture>
            {% endif %}
          </figure>
          {%- unless block.settings.video -%}
            {%- if block.settings.show_overlay_link
              and block.settings.overlay_url != blank
              and settings.banners_clickable
            -%}
              <a
                class="link-overlay"
                href="{{ block.settings.overlay_url }}"
                aria-label="{{ block.settings.title | escape | default: block.settings.image.alt | default: "Image banner" }}"
              ></a>
            {%- endif -%}
          {%- endunless -%}
          <div>
            {%- if block.settings.title != empty -%}
              <div
                class="
                  heading
                  {% if block.settings.title_underline_style != 'none' %}
                    title-underline-none
                    {% if block.settings.title_underline_style contains 'accent' %}
                      title-underline-accent
                    {% elsif block.settings.title_underline_style contains 'gradient' %}
                      title-underline-gradient
                    {% endif %}
                    {% if block.settings.title_underline_style contains 'secondary_font' %}
                      title-underline-secondary-font
                    {% endif %}
                  {% endif %}
                "
              >
                {{ block.settings.title }}
              </div>
            {%- endif -%}

            {%- if block.settings.text != empty -%}
              <div>{{ block.settings.text }}</div>
            {%- endif -%}
            {%- if block.settings.show_link
              and block.settings.link_text != empty
              and block.settings.link_url != blank
            -%}
              {%- liquid
                assign button_color = block.settings.button_style | split: ' ' | first
                assign button_style = block.settings.button_style | split: ' ' | last
                assign is_link = false
                if button_style == 'link'
                  assign is_link = true
                endif
              -%}
              <p class="link-btn">
                <a
                  href="{{ block.settings.link_url }}"
                  class="overlay-{{ button_color }} {% if is_link %}strong inline{% else %}{{ button_style }}{% endif %}"
                >
                  <span
                    {% if is_link %}
                      class="link-underline"
                    {% endif %}
                  >
                    {{- block.settings.link_text -}}
                    &nbsp;{% if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}
                  </span>
                </a>
              </p>
            {%- endif %}
          </div>
        </div>
      </li>
    {%- endfor -%}
  </ul>
</article>

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_desktop | minus: section.settings.space_between }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} .l4ft { margin-bottom: 0; }
    {% if section.settings.layout_mobile == 'rows' %}
      #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    {% else %}
      #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_mobile | minus: section.settings.space_between }}px; }
    {% endif %}
  }
</style>

