{%- liquid
  assign collections_menu = empty
  assign quick_links = empty
  assign show_menu = false
  if section.settings.enable_menu or section.settings.enable_collections
    if section.settings.enable_collections and section.settings.collections_menu != blank
      assign collections_menu = section.settings.collections_menu
    endif
    if section.settings.enable_menu
      assign quick_links = linklists[section.settings.filter_menu]
    endif
    assign show_menu = true
  endif
  assign sorting_block = section.blocks | where: 'type', 'sorting' | first
  assign description_block = section.blocks | where: 'type', 'description' | first
  assign title_block = section.blocks | where: 'type', 'title' | first
  assign show_filters_and_menu = true
  assign show_filters = section.settings.enable_filters
  if show_filters and collection.filters == empty
    assign show_filters = false
  endif
  if show_menu and quick_links == empty and collections_menu == empty
    assign show_menu = false
  endif
  if show_filters == false and show_menu == false
    assign show_filters_and_menu = false
  endif
  assign show_sidebar = false
  if show_filters_and_menu and section.settings.filters_layout == 'static'
    assign show_sidebar = true
  elsif show_menu
    assign show_sidebar = true
  endif

  assign hide_active_filters = false
  assign header_wrapper = false
  if title_block or description_block
    if collection.image and section.settings.show_collection_image
      if section.settings.filters_layout == 'drawer' or show_filters_and_menu == false
        assign header_wrapper = true
        assign wrapper_closed = false
        assign hide_active_filters = true
      endif
    endif
  endif

  if section.settings.enable_secondary_products_per_row_mobile
    assign enable_collection_grid_choice_mobile = true
    assign first_width_class_mobile = 'w100-mobile|1'
    assign secondary_width_class_mobile = 'w50-mobile|2'
  else
    if section.settings.default_grid_mobile == '1'
      assign first_width_class_mobile = 'w100-mobile|1'
    else
      assign first_width_class_mobile = 'w50-mobile|2'
    endif
    assign secondary_width_class_mobile = first_width_class_mobile
  endif
  assign first_collection_grid_view_mobile = first_width_class_mobile | split: '|' | first
  assign secondary_collection_grid_view_mobile = secondary_width_class_mobile | split: '|' | first
  assign has_selected_view_mobile = false
  if cart.attributes.collection_grid_view_mobile == first_collection_grid_view_mobile or cart.attributes.collection_grid_view_mobile == secondary_collection_grid_view_mobile
    assign has_selected_view_mobile = true
  endif
  if has_selected_view_mobile and section.settings.enable_secondary_products_per_row_mobile
    assign width_class_mobile = cart.attributes.collection_grid_view_mobile | split: '|' | first
  else
    if section.settings.default_grid_mobile == '1'
      assign width_class_mobile = first_width_class_mobile | split: '|' | first
    else
      assign width_class_mobile = secondary_width_class_mobile | split: '|' | first
    endif
  endif

  case section.settings.products_per_row
    when 1
      assign first_width_class = 'width-100|1'
    when 2
      assign first_width_class = 'width-50|2'
    when 3
      assign first_width_class = 'width-33|3'
    when 4
      assign first_width_class = 'width-25|4'
  endcase
  assign img_width = 100 | divided_by: section.settings.products_per_row

  if section.settings.enable_secondary_products_per_row
    assign enable_collection_grid_choice = true
    case section.settings.secondary_products_per_row
      when 1
        assign secondary_width_class = 'width-100|1'
      when 2
        assign secondary_width_class = 'width-50|2'
      when 3
        assign secondary_width_class = 'width-33|3'
      when 4
        assign secondary_width_class = 'width-25|4'
      when 5
        assign secondary_width_class = 'width-20|5'
    endcase
  else
    assign secondary_width_class = first_width_class
  endif
  assign first_collection_grid_view = first_width_class | split: '|' | first
  assign secondary_collection_grid_view = secondary_width_class | split: '|' | first
  assign has_selected_view_mobile = false
  if cart.attributes.collection_grid_view == first_collection_grid_view or cart.attributes.collection_grid_view == secondary_collection_grid_view
    assign has_selected_view = true
  endif
  if has_selected_view and section.settings.enable_secondary_products_per_row
    assign width_class = cart.attributes.collection_grid_view | split: '|' | first
  else
    if section.settings.default_grid == 'primary'
      assign width_class = first_width_class | split: '|' | first
    else
      assign width_class = secondary_width_class | split: '|' | first
    endif
  endif

  assign img_width = 100 | divided_by: section.settings.products_per_row
-%}

{%- capture image_sizes -%}
  (min-width: 1300px)
  {%- if section.settings.filters_layout == 'static' or show_menu -%}
    {%- if img_width == 100 -%}
      calc((1280px - 275px) * 0.2)
    {%- else -%}
      calc((1280px - 275px) * 0.{{ img_width }})
    {%- endif -%}
  {%- else -%}
    {%- if img_width == 100 -%}
      calc(1280px * 0.2)
    {%- else -%}
      calc(1280px * 0.{{ img_width }})
    {%- endif -%}
  {%- endif -%}
  ,
  (min-width: 1000px)
  {%- if section.settings.filters_layout == 'static' or show_menu -%}
    {%- if img_width == 100 -%}
      calc((100vw - 275px) * 0.2)
    {%- else -%}
      calc((100vw - 275px) * 0.{{ img_width }})
    {%- endif -%}
  {%- else -%}
    {%- if img_width == 100 -%}
      calc(100vw * 0.2)
    {%- else -%}
      calc(100vw * 0.{{ img_width }})
    {%- endif -%}
  {%- endif -%}
  ,
  {%- if width_class_mobile contains 'w100-mobile' -%}
    100vw
  {%- else -%}
    50vw
  {%- endif -%}
{%- endcapture -%}
{%- if show_filters -%}
  {%- for filter in collection.filters limit: 1 -%}
  {%- endfor -%}
  {% comment %} This is just to get rid of the "this theme does not support filters" message in the shopify admin {% endcomment %}
{%- endif -%}

{%- capture collection_image -%}
  {%- if collection.image and section.settings.show_collection_image -%}
    <figure class="class-x {% if settings.multiply_collection_images == 'multiply' %}img-multiply{% elsif settings.multiply_collection_images == 'multiply-bg' %}img-multiply-bg{% endif %}">
      <img
        src="{{ collection.image | image_url: width: 640 }}"
        srcset="{% render 'image-srcset', image: collection.image, max_width: 720 %}"
        sizes="
          (min-width: 1000px) 0
          (min-width: 760px) 50vw
          100vw
        "
        alt="{{ collection.image.alt | default: collection.title | escape }}"
        width="640"
        height="640"
        {% unless section.index <= 2 %}loading="lazy"{% endunless %}
      >
    </figure>
  {%- endif -%}
{%- endcapture -%}

<div class="collection-wrapper {% if show_filters_and_menu %}m6cl{% unless show_sidebar %} wide{% endunless %}{% endif %}{% unless section.settings.filter_sticky %} static{% endunless %}">
  <div>
    {%- for block in section.blocks -%}
      {%- if block.type == 'title' or block.type == 'description' -%}
        {%- liquid
          if header_wrapper and wrapper_closed == false
            assign end_wrapper = false
            assign prev_block = forloop.index0 | minus: 1
            if start_wrapper
              assign start_wrapper = false
            elsif section.blocks[prev_block].type != 'title' and section.blocks[prev_block].type != 'description' or forloop.first
              assign start_wrapper = true
            endif
            assign next_block = forloop.index
            if section.blocks[next_block].type != 'title' and section.blocks[next_block].type != 'description'
              assign end_wrapper = true
            endif
          endif
        -%}
        {%- if start_wrapper and wrapper_closed == false -%}
          <header class="cols align-middle mobile-inv">
            {%- if collection.image and section.settings.show_collection_image -%}
              {{ collection_image | replace: 'class-x', 'width-25' }}
            {%- endif -%}
            <div class="width-75">
        {%- endif -%}
      {%- endif -%}
      {%- case block.type -%}
        {%- when '@app' -%}
          {% render block %}
        {%- when 'spacer' -%}
          <div
            class="module-spacer"
            style="margin-bottom:{{ block.settings.height }}px;"
            {{ block.shopify_attributes }}
          ></div>
        {%- when 'title' -%}
          <header
            {% if block.settings.text_alignment == 'center' %}
              class="text-center"
            {% endif %}
            {{ block.shopify_attributes }}
          >
            {% if block.settings.title != blank %}
              <{{ block.settings.title_size }}>
                {{- block.settings.title -}}
              </{{ block.settings.title_size }}>
            {% else %}
              <{{ block.settings.title_size }}>{{ collection.title }}</{{ block.settings.title_size }}>
            {% endif %}
          </header>
          {%- if section.settings.show_collection_image
            and collection.image
            and header_wrapper == false
            and description_block == null
          -%}
            {{ collection_image | replace: 'class-x', 'desktop-hide' }}
          {%- endif -%}
          {%- liquid
            if sorting_block == null and show_filters_and_menu
              render 'filters-sorting', display: 'mobile-filter-button', show_filters: show_filters
            endif
          -%}
        {%- when 'description' -%}
          {%- liquid
            if collection.image and section.settings.show_collection_image and header_wrapper == false
              assign show = true
            elsif collection.description != empty or block.settings.text != blank
              assign show = true
            endif
          -%}
          {%- if show -%}
            <article
              class="{% if block.settings.text_alignment == 'center' %}text-center{% endif %}"
              {{ block.shopify_attributes }}
            >
              {%- if collection.description != empty or block.settings.text != blank -%}
                <div>
                  {%- if block.settings.enable_read_more -%}
                    <div class="m6lm">
                      {% if block.settings.text != blank %}
                        {{ block.settings.text }}
                      {% else %}
                        {{ collection.description }}
                      {% endif %}
                    </div>
                    <p class="has-link-more">
                      <a href="./" class="strong link-more">
                        {{- 'general.read_more.read' | t }}
                        <span>{{ 'general.read_more.more' | t }}</span>
                        <span class="hidden">{{ 'general.read_more.less' | t }}</span></a
                      >
                    </p>
                  {%- else -%}
                    {% if block.settings.text != blank %}
                      {{ block.settings.text }}
                    {% else %}
                      {{ collection.description }}
                    {% endif %}
                  {%- endif -%}
                </div>
              {%- endif -%}
              {% if header_wrapper == false %}
                {{ collection_image | replace: 'class-x', 'desktop-hide' }}
              {% endif %}
            </article>
          {%- endif -%}
        {%- when 'sorting' -%}
          {%- render 'filters-sorting',
            display: 'sorting',
            show_filters: show_filters,
            hide_active_filters: hide_active_filters,
            filters_layout: section.settings.filters_layout,
            origin: 'collection',
            object: collection,
            block_attributes: block.shopify_attributes,
            show_amount_of_products: section.settings.show_amount_of_products_in_collection,
            enable_collection_grid_choice: enable_collection_grid_choice,
            collection_grid_view: width_class,
            grid_1: first_width_class,
            grid_2: secondary_width_class,
            enable_collection_grid_choice_mobile: enable_collection_grid_choice_mobile,
            collection_grid_view_mobile: width_class_mobile,
            grid_1_mobile: first_width_class_mobile,
            grid_2_mobile: secondary_width_class_mobile
          -%}
        {%- when 'product_grid' -%}
          {%- if collection.products.size > 0 -%}
            {%- paginate collection.products by section.settings.pagination_qty -%}
              {%- if section.settings.pagination_type == 'button' and paginate.previous %}
                {% render 'pagination',
                  paginate: paginate,
                  pagination_type: section.settings.pagination_type,
                  prev_button: true
                %}
              {%- endif -%}
              <ul
                id="collection"
                class="l4cl mobile-scroll {{ width_class }} {{ width_class_mobile }}"
                {{ block.shopify_attributes }}
              >
                {%- for product in collection.products -%}
                  {%- liquid
                    capture placeholder_int
                      cycle 1, 2, 3, 4, 5, 6
                    endcapture
                    if forloop.first
                      assign first_productcard = true
                    else
                      assign first_productcard = false
                    endif
                    assign fill_first_image = section.settings.fill_images
                    if section.settings.fill_images and section.settings.fill_not_first
                      assign fill_first_image = false
                    endif
                  -%}
                  {%- render 'product-item',
                    product: product,
                    placeholder_int: placeholder_int,
                    type: 'both',
                    sizes: image_sizes,
                    index: forloop.index0,
                    origin: 'collection',
                    fill_images: section.settings.fill_images,
                    fill_first_image: fill_first_image,
                    img_padding: section.settings.images_padding,
                    img_vertical_position: section.settings.images_vertical_position,
                    first_productcard: first_productcard
                  -%}
                {%- endfor -%}
              </ul>
              {% render 'pagination',
                paginate: paginate,
                pagination_type: section.settings.pagination_type,
                show_amount: section.settings.show_amount_of_products_in_collection
              %}
            {%- endpaginate -%}
          {%- else -%}
            <p>{{ 'collection.empty_collection_html' | t }}</p>
          {%- endif -%}
      {%- endcase -%}
      {% if end_wrapper and wrapper_closed == false %}
        {% assign wrapper_closed = true %}
        {%- render 'filters-sorting', display: 'active_filters' -%}
        </div>
        </header>
      {% endif %}
    {%- endfor -%}
  </div>
  {%- if show_sidebar -%}
    {%- liquid
      if section.settings.filters_layout == 'drawer'
        assign show_filters = false
        assign hide_active_filters = true
      endif
    -%}
    <aside>
      {%- render 'filters-sorting',
        display: 'filters',
        filters_layout: section.settings.filters_layout,
        object: collection,
        show_filters: show_filters,
        hide_active_filters: hide_active_filters,
        quick_links: quick_links,
        collections_menu: collections_menu,
        main_menu_items_clickable: section.settings.main_menu_items_clickable,
        show_collection_image: section.settings.show_collection_image,
        filters_show_more_limit: section.settings.filters_show_more_limit,
        enable_filters_checkboxes: section.settings.enable_filters_checkboxes
      -%}
    </aside>
  {%- endif -%}
</div>

{% if section.settings.filters_layout == 'drawer' %}
  <article class="m6pn" id="filters" aria-hidden="true">
    {%- render 'filters-sorting',
      display: 'filters',
      filters_layout: section.settings.filters_layout,
      object: collection,
      show_filters: section.settings.enable_filters,
      collections_menu: collections_menu,
      main_menu_items_clickable: section.settings.main_menu_items_clickable,
      show_collection_image: section.settings.show_collection_image,
      filters_show_more_limit: section.settings.filters_show_more_limit,
      enable_filters_checkboxes: section.settings.enable_filters_checkboxes
    -%}
  </article>
  <script>
    var filters = document.querySelector('.m6pn#filters');
    if (filters) {
      document.querySelector('#root').appendChild(filters);
    }
  </script>
{% endif %}

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  {% if section.settings.enable_custom_filters_font_size %}
      #filters .f8fl, #filters .f8sr, #filters .n6as, #shopify-section-{{ section.id }} .f8fl, #shopify-section-{{ section.id }} .f8sr, #shopify-section-{{ section.id }} .n6as {
          --main_fz: {{ section.settings.filters_font_size }}; font-size: {{ section.settings.filters_font_size }};
      }
  {% endif %}
</style>
