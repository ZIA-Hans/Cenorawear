{% liquid
  assign number_of_items = section.blocks.size
  assign newsletter_block = section.blocks | where: 'type', 'newsletter' | first
  assign customer_support_block = section.blocks | where: 'type', 'customer_support' | first
  assign menu_block = section.blocks | where: 'type', 'menu' | first
  if menu_block and menu_block.settings.split_menu
    assign split_menu = true
  elsif menu_block
    assign split_menu = false
  endif
  if menu_block
    assign number_of_items = number_of_items | plus: linklists[menu_block.settings.menu].links.size | minus: 1
  endif
  if newsletter_block
    assign number_of_items = number_of_items | plus: 1
  endif
  if section.settings.enable_language_selector and localization.available_languages.size > 1
    assign show_language_selector = true
  endif
  if section.settings.enable_country_selector and localization.available_countries.size > 1
    assign show_country_selector = true
  endif
  capture nav_alignment
    if section.settings.content_position == 'center'
      echo 'align-center'
    endif
    if section.settings.column_text_alignment == 'center'
      echo ' text-center'
    endif
  endcapture

  case number_of_items
    when 0
      assign width_class = 'width-33'
    when 1
      assign width_class = 'width-33'
    when 2
      assign width_class = 'width-33'
    when 3
      assign width_class = 'width-33'
    when 4
      assign width_class = 'width-25'
    when 5
      assign width_class = 'width-20'
    when 6
      assign width_class = 'width-16'
    else
      assign width_class = 'width-16'
  endcase
%}

{% if section.settings.show_socials %}
  {%- capture 'socials' -%}
    {%- if settings.social_instagram -%}instagram|{{settings.social_instagram}}|{{ settings.social_instagram_name }}->{%- endif -%}
    {%- if settings.social_pinterest -%}pinterest|{{settings.social_pinterest}}|{{ settings.social_pinterest_name }}->{%- endif -%}
    {%- if settings.social_youtube -%}youtube|{{settings.social_youtube}}|{{ settings.social_youtube_name }}->{%- endif -%}
    {%- if settings.social_facebook -%}facebook|{{settings.social_facebook}}|{{ settings.social_facebook_name }}->{%- endif -%}
    {%- if settings.social_twitter -%}twitter|{{settings.social_twitter}}|{{ settings.social_twitter_name }}->{%- endif -%}
    {%- if settings.social_tiktok -%}tiktok|{{settings.social_tiktok}}|{{ settings.social_tiktok_name }}->{%- endif -%}
    {%- if settings.social_tumblr -%}tumblr|{{settings.social_tumblr}}|{{ settings.social_tumblr_name }}->{%- endif -%}
    {%- if settings.social_snapchat -%}snapchat|{{settings.social_snapchat}}|{{ settings.social_snapchat_name }}{%- endif -%}
  {%- endcapture -%}
  {%- assign socials = socials | split: '->' -%}
  {%- capture 'socials_block' -%}
    {%- if socials.size > 0 -%}
      <ul class="l4sc class_x">
        {%- for social in socials -%}
          {%- assign social_info = social | split: '|' -%}
          {%- assign social_translation = 'socials.' | append: social_info[0] -%}
          <li><a aria-label="{{ social_translation | t }}" href="{{ social_info[1] }}" rel="external noopener" target="external"><i aria-hidden="true" class="icon-{{ social_info[0] }}"></i><span>{{ social_translation | t }}</span></a></li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      {%- if shop.brand.metafields.social_links.size > 0 -%}
        <ul class="l4sc class_x">
          {%- for social in shop.brand.metafields.social_links -%}
            {%- assign social_translation = 'socials.' | append: social[0] -%}
            <li><a aria-label="{{ social_translation | t }}" href="{{ social[1] }}" rel="external noopener" target="external"><i aria-hidden="true" class="icon-{{ social[0] }}"></i><span>{{ social_translation | t }}</span></a></li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
    {%- endif -%}
  {%- endcapture -%}
{% endif %}

<nav
  id="shopify-section-footer"
  class="cols {{ nav_alignment }}"
  {% if settings.enable_animations %}
    data-sal="fade" data-sal-duration="500"
  {% endif %}
>
  {%- assign new_cols_html = '</nav><nav class="cols ' | append: nav_alignment | append: '">' -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        {% render block %}
        {%- liquid
          assign nr = nr | plus: 1
          assign modulo = nr | modulo: 6
          if modulo == 0 and nr != number_of_items and forloop.last == false
            assign split = true
          else
            assign split = false
          endif
          if split
            echo new_cols_html
          endif
        -%}
      {%- when 'text' %}
        {%- if block.settings.title != empty or block.settings.text != empty -%}
          <div
            class="
              {{ width_class }}{% if block.settings.text == empty %} m6cn{% endif %}
              {% if block.settings.title_underline_style != 'none' %}
                title-underline-none
                {% if block.settings.title_underline_style contains 'accent' %}
                  title-underline-accent
                {% elsif block.settings.title_underline_style contains 'gradient' %}
                  title-underline-gradient
                {% endif %}
                {% if block.settings.title_underline_style contains 'secondary_font' %}
                  title-underline-secondary-font
                {% endif %}
              {% endif %}
            "
            style="--main_h_small:var(--main_{{ section.settings.title_size_blocks }});"
            {{ block.shopify_attributes }}
          >
            <{{ section.settings.title_size_blocks }} class="ff-{{ section.settings.title_font }}">
              {{ block.settings.title }}
            </{{ section.settings.title_size_blocks }}>
            {{ block.settings.text }}
          </div>
          {%- liquid
            assign nr = nr | plus: 1
            assign modulo = nr | modulo: 6
            if modulo == 0 and nr != number_of_items and forloop.last == false
              assign split = true
            else
              assign split = false
            endif
            if split
              echo new_cols_html
            endif
          -%}
        {%- endif -%}
      {%- when 'html' %}
        {%- if block.settings.html != empty -%}
          <div class="{{ width_class }}" {{ block.shopify_attributes }}>
            {{ block.settings.html }}
          </div>
          {%- liquid
            assign nr = nr | plus: 1
            assign modulo = nr | modulo: 6
            if modulo == 0 and nr != number_of_items and forloop.last == false
              assign split = true
            else
              assign split = false
            endif
            if split
              echo new_cols_html
            endif
          -%}
        {%- endif -%}
      {%- when 'customer_support' -%}
        <div
          class="palette-{{ section.settings.footer_color }} module-color-palette {{ width_class }} m6cn"
          style="--main_h_small:var(--main_{{ block.settings.title_size }});"
          {{ block.shopify_attributes }}
        >
          {%- if block.settings.title != empty -%}
            <div
              class="
                {% if block.settings.title_underline_style != 'none' %}
                  title-underline-none
                  {% if block.settings.title_underline_style contains 'accent' %}
                    title-underline-accent
                  {% elsif block.settings.title_underline_style contains 'gradient' %}
                    title-underline-gradient
                  {% endif %}
                  {% if block.settings.title_underline_style contains 'secondary_font' %}
                    title-underline-secondary-font
                  {% endif %}
                {% endif %}
              "
            >
              <{{ section.settings.title_size_blocks }} class="ff-{{ section.settings.title_font }}">
                {{ block.settings.title }}
              </{{ section.settings.title_size_blocks }}>
            </div>
          {%- endif -%}
          <div class="cols">
            {%- if block.settings.customer_support_img -%}
              {%- assign customer_support_img_width_2 = block.settings.customer_support_img_width | times: 2 %}
              <div>
                <figure
                  {% if block.settings.customer_support_img_rounded %}
                    class="rounded" style="max-width: {{ block.settings.customer_support_img_width }}px"
                  {% endif %}
                >
                  <picture
                    {% if block.settings.customer_support_img_rounded %}
                      class="orientation-square img-cover"
                    {% endif %}
                  >
                    <img
                      src="{{ block.settings.customer_support_img | image_url: width: customer_support_img_width_2 }}"
                      width="{{ block.settings.customer_support_img_width }}"
                      height="{% if block.settings.customer_support_img_rounded %}{{ block.settings.customer_support_img_width }}{% else %}165{% endif %}"
                      alt="{{ block.settings.customer_support_img.alt | default: default_alt | escape }}"
                      loading="lazy"
                    >
                  </picture>
                </figure>
              </div>
            {%- endif -%}
            <div>
              {%- if block.settings.text != empty -%}
                {{ block.settings.text }}
              {%- endif -%}
              {% liquid
                assign show_phone = false
                assign show_mail = false
                assign show_whatsapp = false
                if shop.phone != empty and shop.phone != blank and block.settings.show_phone_link
                  assign show_phone = true
                endif
                if shop.email != empty and shop.email != blank and block.settings.show_mail_link
                  assign show_mail = true
                endif
                if settings.whatsapp != empty and settings.whatsapp != 0 and block.settings.show_whatsapp_link
                  assign show_whatsapp = true
                endif
              %}
              {% if show_phone or show_mail or show_whatsapp %}
                <ul class="l4cn">
                  {% if show_phone %}
                    <li>
                      <a href="tel:{{ shop.phone }}"><i aria-hidden="true" class="icon-phone"></i> {{ shop.phone }}</a>
                    </li>
                  {% endif %}
                  {% if show_mail %}
                    <li>
                      <a href="mailto:{{ shop.email }}" class="email"
                        ><i aria-hidden="true" class="icon-envelope" style="--sz: 14px;"></i> {{ shop.email -}}
                      </a>
                    </li>
                  {% endif %}
                  {% if show_whatsapp %}
                    <li>
                      <a href="https://wa.me/{{ settings.whatsapp }}"
                        ><i aria-hidden="true" class="icon-whatsapp"></i> {{ 'footer.whatsapp_html' | t -}}
                      </a>
                    </li>
                  {% endif %}
                </ul>
              {% endif %}
              {%- if shop.features.follow_on_shop? and block.settings.enable_follow_on_shop -%}
                <p class="follow-on-shop">
                  {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
                  {% # theme-check-disable %}
                  {{ shop | login_button: action: 'follow' }}
                  {% # theme-check-enable %}
                </p>
              {%- endif -%}
            </div>
          </div>
          {% if section.settings.show_socials %}
            {{ socials_block | replace: 'class_x', 'desktop-hide' }}
          {% endif %}
        </div>
        {%- liquid
          assign nr = nr | plus: 1
          assign modulo = nr | modulo: 6
          if modulo == 0 and nr != number_of_items and forloop.last == false
            assign split = true
          else
            assign split = false
          endif
          if split
            echo new_cols_html
          endif
        -%}
      {%- when 'menu' -%}
        {%- liquid
          assign first_menu_items_limit = 6 | minus: section.blocks.size | at_least: 0
          if first_menu_items_limit == 4
            assign first_menu_items_limit = 6
          endif
        -%}
        {%- if split_menu -%}
          {%- capture menu_blocks -%}
            {%- for link in linklists[block.settings.menu].links limit: first_menu_items_limit -%}
              <div class="{{ width_class }} {% if linklists[block.settings.menu].links.size > first_menu_items_limit %} mobile-hide{% endif %}" {{ block.shopify_attributes }}>
                <{{ section.settings.title_size_blocks }} class="ff-{{ section.settings.title_font }}"><a href="{{ link.url }}">{{ link.title }}</a></{{ section.settings.title_size_blocks }}>
                {%- if link.links != blank -%}
                  <ul>
                    {%- for sub in link.links -%}
                      <li><a href="{{ sub.url }}" title="{{ sub.title }}">{{ sub.title }}</a></li>
                      {%- if sub.links != blank -%}
                        <ul>
                          {%- for subsub in sub.links -%}
                            <li><a href="{{ subsub.url }}" title="{{ subsub.title }}">{{ subsub.title }}</a></li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- endfor -%}
          {%- endcapture -%}
          {{ menu_blocks }}
        {%- else -%}
          {%- for link in linklists[block.settings.menu].links -%}
            <div class="{{ width_class }}" {{ block.shopify_attributes }}>
              <{{ section.settings.title_size_blocks }} class="ff-{{ section.settings.title_font }}"
                ><a href="{{ link.url }}">{{ link.title }}</a></{{ section.settings.title_size_blocks }}
              >
              {%- if link.links != blank -%}
                <ul>
                  {%- for sub in link.links -%}
                    <li>
                      <a href="{{ sub.url }}" title="{{ sub.title }}">{{ sub.title }}</a>
                    </li>
                    {%- if sub.links != blank -%}
                      <ul>
                        {%- for subsub in sub.links -%}
                          <li>
                            <a href="{{ subsub.url }}" title="{{ subsub.title }}">{{ subsub.title }}</a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
            {%- liquid
              assign nr = nr | plus: 1
              assign modulo = nr | modulo: 6
              if modulo == 0 and nr != number_of_items and forloop.last == false
                assign split = true
              else
                assign split = false
              endif
              if split
                echo new_cols_html
              endif
            -%}
          {%- endfor -%}
        {%- endif -%}
      {%- when 'newsletter' -%}
        {%- liquid
          assign nr = nr | plus: 1
          assign modulo = nr | modulo: 6
          if modulo == 0 and nr != number_of_items and forloop.last == false
            assign split_before = true
          else
            assign split_before = false
          endif
          assign nr = nr | plus: 1
          assign modulo = nr | modulo: 6
          if modulo == 0 and nr != number_of_items and forloop.last == false
            assign split_after = true
          else
            assign split_after = false
          endif
          if split_before
            echo new_cols_html
          endif
        -%}
        <div
          class="palette-{{ section.settings.footer_color }} module-color-palette has-form width-33"
          style="--main_h_small:var(--main_{{ block.settings.title_size }});"
          {{ block.shopify_attributes }}
        >
          {%- if block.settings.title != empty -%}
            <div
              class="
                ff-{{ section.settings.title_font }}
                {% if block.settings.title_underline_style != 'none' %}
                  title-underline-none
                  {% if block.settings.title_underline_style contains 'accent' %}
                    title-underline-accent
                  {% elsif block.settings.title_underline_style contains 'gradient' %}
                    title-underline-gradient
                  {% endif %}
                  {% if block.settings.title_underline_style contains 'secondary_font' %}
                    title-underline-secondary-font
                  {% endif %}
                {% endif %}
              "
            >
              <{{ section.settings.title_size_blocks }}
                class="ff-{{ section.settings.title_font }}"
                style="font-size: var(--main_{{ section.settings.title_size_blocks }});"
              >
                {{ block.settings.title }}
              </{{ section.settings.title_size_blocks }}>
            </div>
          {%- endif -%}
          {%- if block.settings.newsletter_text -%}{{ block.settings.newsletter_text }}{%- endif -%}
          {%- form 'customer', id: 'newsletter-footer', class: 'f8vl', style: 'max-width:425px;' -%}
            {%- if form.errors -%}
              <script>
                document.addEventListener('DOMContentLoaded', function () {
                  var alertAttributes = {
                      message: "{{ 'newsletter.form.email_placeholder' | t }} {{ form.errors.messages['email'] }}",
                      type: 'error',
                      origin: 'newsletter',
                    },
                    showAlertEvent = new CustomEvent('showAlert', { detail: alertAttributes });
                  window.dispatchEvent(showAlertEvent);
                });
              </script>
            {%- elsif form.posted_successfully? -%}
              <script>
                document.addEventListener('DOMContentLoaded', function () {
                  var alertAttributes = {
                      message: "{{ 'newsletter.form.success' | t }}",
                      type: 'success',
                      origin: 'newsletter',
                    },
                    showAlertEvent = new CustomEvent('showAlert', { detail: alertAttributes });
                  window.dispatchEvent(showAlertEvent);
                });
              </script>
            {%- endif -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="cols cols-mobile">
              <p class="flex-grow">
                <label for="email-{{ section.id }}">
                  {{- 'newsletter.subtitle_html' | t -}}
                  <span class="overlay-theme">*</span></label
                >
                <input
                  type="email"
                  name="contact[email]"
                  id="email-{{ section.id }}"
                  aria-label="{{ 'newsletter.form.email_placeholder' | t }}"
                  placeholder="{{ 'newsletter.form.email_placeholder' | t }}"
                  required
                >
              </p>
              <div>
                {%- liquid
                  assign button_color = block.settings.footer_button_color | split: ' ' | first
                  assign button_style = block.settings.footer_button_color | split: ' ' | last
                -%}
                <p class="link-btn">
                  <button
                    type="submit"
                    class="overlay-{{ button_color }} {{ button_style }}"
                  >
                    <i aria-hidden="true" class="icon-arrow-right"></i
                    ><span class="hidden">{{ 'newsletter.form.submit_button' | t }}</span>
                  </button>
                </p>
              </div>
            </div>
            {%- if block.settings.enable_newsletter_terms_checkbox and block.settings.newsletter_terms_text != empty -%}
              <div>
                <p class="check">
                  <input
                    type="checkbox"
                    id="newsletter_check-{{ section.id }}"
                    name="newsletter_check-{{ section.id }}"
                    required
                  >
                  <label for="newsletter_check-{{ section.id }}">
                    {{- block.settings.newsletter_terms_text | remove: '<p>' | remove: '</p>' -}}
                  </label>
                </p>
              </div>
            {%- endif -%}
          {% endform %}
          {% if section.settings.show_socials %}
            {%- liquid
              if customer_support_block != blank
                assign social_classes = 'desktop-only'
              endif
              if section.settings.column_text_alignment == 'left'
                assign social_classes = social_classes | append: ' text-start'
              endif
            -%}
            {{ socials_block | replace: 'class_x', social_classes }}
          {% endif %}
        </div>
        {%- if split_after -%}
          {{ new_cols_html }}
        {%- endif -%}
    {%- endcase -%}
  {%- endfor -%}
</nav>

{%- if split_menu -%}
  {%- if menu_block and linklists[menu_block.settings.menu].links.size > first_menu_items_limit -%}
    <nav class="cols {{ nav_alignment }}">
      {{ menu_blocks | replace: 'mobile-hide', 'mobile-only' }}
      {%- for link in linklists[menu_block.settings.menu].links offset: first_menu_items_limit -%}
        {%- liquid
          assign modulo = forloop.index | modulo: 6
          if modulo == 0 and forloop.index != number_of_items
            assign split = true
          else
            assign split = false
          endif
        -%}
        <div class="width-16">
          <{{ menu_block.settings.title_size }} class="ff-{{ section.settings.title_font }} fw-{{ menu_block.settings.title_weight }}"
            ><a href="{{ link.url }}">{{ link.title }}</a></{{ menu_block.settings.title_size }}
          >
          {%- if link.links != blank -%}
            <ul>
              {%- for sub in link.links -%}
                <li>
                  <a href="{{ sub.url }}" title="{{ sub.title }}">{{ sub.title }}</a>
                </li>
                {%- if sub.links != blank -%}
                  <ul>
                    {%- for subsub in sub.links -%}
                      <li>
                        <a href="{{ subsub.url }}" title="{{ subsub.title }}">{{ subsub.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
        {%- if split and forloop.last == false -%}
          {{ new_cols_html }}
        {%- endif -%}
      {%- endfor -%}
    </nav>
  {%- endif -%}
{%- endif -%}

<div class="cols align-middle {{ nav_alignment }}">
  <div>
    <div class="cols cols-mobile align-middle text-center" style="--cols_spacing: 16px;">
      {%- if section.settings.copyright_img -%}
        <figure>
          {%- if section.settings.copyright_img_link != empty -%}
            <a href="{{ section.settings.copyright_img_link }}">
          {%- endif -%}
          <picture>
            <img
              {% assign copyright_img_width_2 = section.settings.copyright_img_width | times: 2 %}
              {% if section.settings.darkmode_copyright_img %}
                class="dark-hide"
              {% endif %}
              src="{{- section.settings.copyright_img | image_url: width: copyright_img_width_2 -}}"
              width="{{ section.settings.copyright_img_width }}"
              height="40"
              alt="{{ section.settings.copyright_img.alt | default: 'Footer image' | escape }}"
              loading="lazy"
            >
            {%- if section.settings.darkmode_copyright_img -%}
              <img
                class="dark-only"
                src="{{- section.settings.darkmode_copyright_img | image_url: width: copyright_img_width_2 -}}"
                width="{{ section.settings.copyright_img_width }}"
                height="40"
                alt="{{ section.settings.darkmode_copyright_img.alt | default: 'Footer image' | escape }}"
                loading="lazy"
              >
            {%- endif -%}
          </picture>
          {%- if section.settings.copyright_img_link != empty -%}</a>{%- endif -%}
        </figure>
      {%- endif -%}
      <p>
        &copy; <span class="date">{{ 'now' | date: '%Y' }}</span> {{ shop.name }}, {{ powered_by_link }}
      </p>
    </div>
  </div>
  {%- if newsletter_block == blank and section.settings.show_socials -%}
    <div
      {% if customer_support_block != blank %}
        class="desktop-only"
      {% endif %}
    >
      {{ socials_block | remove: 'class_x' }}
    </div>
  {%- endif -%}
  {%- if show_language_selector or show_country_selector -%}
    <div>
      <ul class="l4dr">
        {%- liquid
          if show_language_selector
            render 'language-country-selector', display: 'language', origin: 'footer'
          endif
          if show_country_selector
            render 'language-country-selector', display: 'country', origin: 'footer'
          endif
        -%}
      </ul>
    </div>
  {%- endif -%}
</div>

{%- assign show_payment_methods = section.settings.show_payment_methods -%}
{%- if section.settings.show_payment_methods and shop.enabled_payment_types.size <= 0 -%}
  {%- assign show_payment_methods = false -%}
{%- endif -%}
{%- if show_payment_methods or section.settings.bottom_img or section.settings.enable_follow_on_shop -%}
  <ul class="l4pm">
    {%- if section.settings.bottom_img -%}
      <li
        {% if section.settings.show_payment_methods %}
          class="text-start"
        {% endif %}
      >
        {%- if section.settings.bottom_img_link != blank -%}
          <a href="{{ section.settings.bottom_img_link }}">
        {%- endif -%}
        <img
          {% assign bottom_img_width_2 = section.settings.bottom_img_width | times: 2 %}
          src="{{- section.settings.bottom_img | image_url: width: bottom_img_width_2 -}}"
          width="{{ section.settings.bottom_img_width }}"
          height="40"
          alt="{{ section.settings.bottom_img.alt | default: 'Footer bottom image' | escape }}"
          loading="lazy"
          {% if section.settings.darkmode_bottom_img %}
            class="dark-hide"
          {% endif %}
        >
        {%- if section.settings.darkmode_bottom_img -%}
          <img
            class="dark-only"
            src="{{- section.settings.darkmode_bottom_img | image_url: width: bottom_img_width_2 -}}"
            width="{{ section.settings.bottom_img_width }}"
            height="40"
            alt="{{ section.settings.darkmode_bottom_img.alt | default: 'Footer bottom image' | escape }}"
            loading="lazy"
          >
        {%- endif -%}
        {%- if section.settings.bottom_img_link != blank -%}</a>{%- endif -%}
      </li>
    {%- endif -%}
    {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
      <li class="follow-on-shop{% unless section.settings.bottom_img %} text-start{% endunless %}">
        {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
        {% # theme-check-disable %}
        {{ shop | login_button: action: 'follow' }}
        {% # theme-check-enable %}
      </li>
    {%- endif -%}
    {%- if section.settings.show_payment_methods -%}
      {%- for payment_method in shop.enabled_payment_types -%}
        <li>{{ payment_method | payment_type_svg_tag }}</li>
      {%- endfor -%}
