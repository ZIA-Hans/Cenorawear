{% liquid
  capture background_classes
    if section.settings.background_overlay_opacity == 0
      echo 'no-padding'
    else
      if section.settings.background_height == 0 or section.settings.background_width == 0
        echo 'no-padding-desktop'
      endif
      if section.settings.background_height_mobile == 0 or section.settings.background_width_mobile == 0
        echo ' no-padding-mobile'
      endif
    endif
  endcapture
-%}
<article
  class="m6bx {{ background_classes }} {{ section.settings.width }} text-{{ section.settings.text_alignment }} align-center size-{{ section.settings.height }} height-mobile-{{ section.settings.height_mobile }}"
  style="{% if section.settings.enable_custom_height %}--mih_desktop:{{ section.settings.custom_height }}px;{% endif %}"
>
  <div
    class="palette-{{ section.settings.color_palette }} module-color-palette img-overlay overlay-theme{% if section.settings.background_position == 'right' %} text-end{% endif %}"
    style="--mih_desktop: {{ section.settings.background_height }}%; --dist_half: {{ 100 | minus: section.settings.background_width }}%; --mih_mobile: {{ section.settings.background_height_mobile }}%; --dist_half_mobile: {{ 100 | minus: section.settings.background_width_mobile }}%; opacity:{{ section.settings.background_overlay_opacity | divided_by: 100.0 }}"
  ></div>
  <div
    {% if settings.enable_animations %}
      data-sal="fade" data-sal-duration="500" data-sal-delay="300"
    {% endif %}
    class="align-{{ section.settings.text_alignment }}"
    style="--main_lh_h: {{ section.settings.line_height | divided_by: 100.0 }}"
  >
    {%- if section.settings.title != empty -%}
      <div
        class="
          {% if section.settings.background_color_section %}palette-{{ section.settings.color_palette }} module-color-palette{% endif %} primary-title{% if section.settings.image %} overlay-img{% endif %} title-styling
          {% if section.settings.title_underline_style != 'none' %}
            title-underline-none
            {% if section.settings.title_underline_style contains 'accent' %}
              title-underline-accent
            {% elsif section.settings.title_underline_style contains 'gradient' %}
              title-underline-gradient
            {% endif %}
            {% if section.settings.title_underline_style contains 'secondary_font' %}
              title-underline-secondary-font
            {% endif %}
          {% endif %}
        "
        style="
          {% if section.settings.image %}
            background-image: url({{ section.settings.image | image_url: width: section.settings.content_width }});
            background-position: {{ section.settings.image.presentation.focal_point }};
          {% endif %}
          max-width: {% if section.settings.content_width == 2000 %}100%{% else %}{{ section.settings.content_width }}px{% endif %};
        "
      >
        {{ section.settings.title }}
      </div>
    {%- endif -%}
  </div>
</article>

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  {% if section.settings.enable_custom_title_size %}
    #shopify-section-{{ section.id }} > article { container-type: inline-size; }
    #shopify-section-{{ section.id }} .primary-title > * {
      font-size: {{ section.settings.custom_title_size | divided_by: 6 }}cqw;
    }
  {% endif %}
  #shopify-section-{{ section.id }} .no-padding .primary-title { margin-bottom: 0; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} { margin-bottom: {{ section.settings.spacing_desktop }}px; }
    #shopify-section-{{ section.id }} .no-padding-desktop .primary-title { margin-bottom: 0; }
  }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    #shopify-section-{{ section.id }} .no-padding-mobile .primary-title { margin-bottom: 0; }
  }
</style>

