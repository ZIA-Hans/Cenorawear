<nav class="n6br{% if settings.breadcrumbs_font == 'primary' %} title-font{% endif %}" role="navigation" aria-label="breadcrumbs">
    <ol>
        <li>
            <a href="{{ routes.account_url }}" title="Home">{{ 'customer.account.back_to_account' | t }}</a>
        </li>
    </ol>
</nav>
<header>
    <{{ settings.global_title_size }} class="margin-content">{{ 'customer.addresses.title' | t }}</{{ settings.global_title_size }}>
</header>
<article class="cols br margin-5">
    {%- if customer.addresses == blank -%}
        <p>{{ 'customer.addresses.empty' | t }}</p>
    {%- else -%}
        {%- if customer.default_address -%}
            <div class="width-50">
                <h2 class="size-18 margin-half">{{ 'customer.addresses.default_address_label' | t }}</h2>
                <div class="m6bx size-s">
                    <span class="img-overlay"></span>
                    <div>
                        <p>
                            {{ customer.default_address.first_name }} {{ customer.default_address.last_name }}<br>
                            {% liquid
                                if customer.default_address.company != empty and customer.default_address.company != blank
                                    echo customer.default_address.company
                                    echo '<br>'
                                endif
                                if customer.default_address.street != empty and customer.default_address.street != blank
                                    echo customer.default_address.street
                                    echo '<br>'
                                endif
                                if customer.default_address.zip != empty and customer.default_address.zip != blank
                                    echo customer.default_address.zip
                                    assign zip = true
                                endif
                                if customer.default_address.city != empty and customer.default_address.city != blank
                                    if zip
                                        echo '&nbsp;'
                                    endif
                                    echo customer.default_address.city
                                    assign city = true
                                endif
                                if zip or city
                                    echo '<br>'
                                endif
                                if customer.default_address.country != empty and customer.default_address.country != blank
                                    echo customer.default_address.country
                                endif
                            -%}
                        </p>
                        {%- if customer.default_address.phone != blank -%}
                            <p><a href="tel:+{{ customer.default_address.phone }}">{{ customer.default_address.phone }}</a></p>
                        {%- endif -%}
                        <ul class="l4in">
                            <li><a href="./" data-toggle="address-{{ customer.default_address.id }}-form"{% if settings.button_style == 'inv' %} class="inv"{% endif %}>{{ 'customer.addresses.edit' | t }}</a></li>
                            <li><a class="inline address-delete-button" data-target="{{ customer.default_address.url }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">{{ 'customer.addresses.delete' | t }}</a></li>
                        </ul>
                        {%- render 'address-form', address: customer.default_address -%}
                    </div>
                </div>
            </div>
        {%- endif -%}
        {%- for address in customer.addresses -%}
            {%- unless address == customer.default_address -%}
                <div class="width-50">
                    <h2 class="size-18 margin-half">{{ 'customer.addresses.address_label' | t: position: forloop.index }}</h2>
                    <div class="m6bx size-s">
                        <span class="img-overlay"></span>
                        <div>
                            <p>
                                {%- liquid
                                    assign zip = false
                                    assign city = false
                                -%}
                                {{ address.first_name }} {{ address.last_name }}<br>
                                {%- liquid
                                    if address.company != empty and address.company != blank
                                        echo address.company
                                        echo '<br>'
                                    endif
                                    if address.street != empty and address.street != blank
                                        echo address.street
                                        echo '<br>'
                                    endif
                                    if address.zip != empty and address.zip != blank
                                        echo address.zip
                                        assign zip = true
                                    endif
                                    if address.city != empty and address.city != blank
                                        if zip
                                            echo '&nbsp;'
                                        endif
                                        echo address.city
                                        assign city = true
                                    endif
                                    if zip or city
                                        echo '<br>'
                                    endif
                                    if address.country != empty and address.country != blank
                                        echo address.country
                                    endif
                                -%}
                            </p>
                            {%- if address.phone != blank -%}
                                <p><a href="tel:+{{ address.phone }}">{{ address.phone }}</a></p>
                            {%- endif -%}
                            <ul class="l4in">
                                <li><a href="./" data-toggle="address-{{ address.id }}-form"{% if settings.button_style == 'inv' %} class="inv"{% endif %}>{{ 'customer.addresses.edit' | t }}</a></li>
                                <li><a class="inline address-delete-button" data-target="{{ address.url }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">{{ 'customer.addresses.delete' | t }}</a></li>
                            </ul>
                            {%- render 'address-form', address: address -%}
                        </div>
                    </div>
                </div>
            {%- endunless -%}
        {%- endfor -%}
    {%- endif -%}
</article>
<p class="link-btn margin-50"><a href="./" data-toggle="address-new-form"{% if settings.button_style == 'inv' %} class="inv"{% endif %}>{{ 'customer.addresses.add_address_button' | t }}</a></p>
{%- render 'address-form' -%}
