{% liquid
  assign background = true
  assign background_class = ''
  if section.settings.background_overlay_opacity == 0
    assign background = false
    assign background_class = 'no-padding'
  else
    if section.settings.background_height == 0 or section.settings.background_width == 0
      assign background = false
      assign background_class = 'no-padding-desktop'
    endif
    if section.settings.background_height_mobile == 0 or section.settings.background_width_mobile == 0
      assign background_class = 'no-padding-mobile'
    endif
  endif

  for block in section.blocks reversed
    if block.type == 'image'
      assign first_media = block
    elsif block.type == 'video'
      assign first_media = block
    endif
  endfor

  assign images = section.blocks | where: 'type', 'image'
  assign videos = section.blocks | where: 'type', 'video'

  assign media = false
  if images.size > 0 or videos.size > 0
    assign media = true
  endif

  assign counter = 1

  assign first_image = section.blocks | where: 'type', 'image' | first
-%}

<article
  class="m6bx {{ background_class }} {{ section.settings.width }} {% if section.settings.transparent and section.settings.width == 'wide' %} wide-transparent{% endif %} flexible-section"
  style="{% if section.settings.enable_custom_height %}--mih:{{ section.settings.custom_height }}px;{% endif %}"
  data-color-palette="{{ section.settings.background_color_palette }}"
  data-active-content="palette-{{ first_media.settings.color_palette }}"
>
  <div
    class="palette-{{ section.settings.background_color_palette }} module-color-palette img-overlay overlay-theme{% if section.settings.background_width < 100 %}{% if section.settings.background_position == 'right' %} text-end{% endif %}{% endif %}"
    style="--mih_desktop: {{ section.settings.background_height }}%; --dist_half: {{ 100 | minus: section.settings.background_width }}%; --mih_mobile: {{ section.settings.background_height_mobile }}%; --dist_half_mobile: {{ 100 | minus: section.settings.background_width_mobile }}%; opacity:{{ section.settings.background_overlay_opacity | divided_by: 100.0 }}"
  ></div>
  <div>
    <div
      class="m6fr{% if background == false and section.settings.width == 'wide' %} wide{% endif %} size-{{ section.settings.height_mobile }}-mobile richtext"
      data-active-content="palette-{{ first_image.settings.color_palette }}"
    >
      <article
        class="no-padding{% if section.settings.layout_mobile == 'grid' %} mobile-static flexible-stack{% elsif section.settings.layout_mobile == 'slideshow' and media %} mobile-static{% elsif section.settings.layout_mobile == 'flexible' and section.settings.content_below_media %} mobile-flexible-static {{ section.settings.media_mobile_height }}-mobile{% endif %}"
        style="--gutter: {{ settings.gutter }}; {% if section.settings.layout_mobile == 'slideshow' %}--b2p_mobile:{{ first_image.settings.border_radius }}px;{% endif %}"
      >
        {%- if media -%}
          <div class="media-flexible">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'image' -%}
                  {%- liquid
                    if block.settings.image_mobile
                      assign image = block.settings.image_mobile
                    else
                      assign image = block.settings.image
                    endif
                  -%}
                  <figure
                    {% if settings.enable_animations %}
                      data-sal="fade" data-sal-delay="{{ forloop.index0 | times: 100 }}"
                    {% endif %}
                    data-slide-index="{{ counter }}"
                    {{ block.shopify_attributes }}
                    data-color-palette="palette-{{ block.settings.color_palette }}"
                    class="
                      {% if block.settings.constrain %} constrain{% endif %}
                      {% if block.settings.mobile_hide %} mobile-hide{% endif %}
                      {% unless section.settings.layout_mobile == 'grid' and block.settings.fill_image != true %}{{ section.settings.media_mobile_height }}-mobile{% endunless %}
                      item-{{ forloop.index }}
                    "
                    style="
                      top: {{ block.settings.vertical_position }}%;
                      left: {{ block.settings.horizontal_position }}%;
                      width: {{ block.settings.image_width }}%;
                      transform: translate(-{{ block.settings.horizontal_position }}%, -{{ block.settings.vertical_position }}%);
                      height: {% if block.settings.constrain %}auto{% else %}{{ block.settings.image_height }}%{% endif %};
                      --b2p: {{ block.settings.border_radius }}px;
                      {% if block.settings.constrain %}bottom: unset;{% endif %}
                      position: absolute;
                      z-index:-{{ forloop.length | minus: forloop.index0 }};
                      {% if section.settings.layout_mobile == 'slideshow' %}--b2p_mobile:{{ first_image.settings.border_radius }}px;{% else %}--b2p_mobile:{{ block.settings.border_radius }}px;{% endif %}
                    "
                  >
                    {%- if block.settings.image -%}
                      <picture
                        {% if block.settings.shape != 'none' %}
                          class="img-mask img-mask-{{ block.settings.shape }}"
                        {% endif %}
                        style="opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};"
                      >
                        {%- if block.settings.link_url != blank -%}
                          <a
                            href="{{ block.settings.link_url }}"
                            class="link-overlay"
                            aria-label="{{ block.settings.image.alt | default: "Image banner" | escape }}"
                          ></a>
                        {%- endif -%}
                        {% assign percentage = block.settings.image_width | divided_by: 100.0 %}
                        <img
                          src="{{ image | image_url: width: 768 }}"
                          srcset="{% render 'image-srcset', image: image %}"
                          sizes="
                            (min-width: 760px) 0,
                            100vw
                          "
                          alt="{{ image.alt | default: block.settings.title | escape }}"
                          width="640"
                          height="640"
                          style="object-position: {{ image.presentation.focal_point }};{% unless block.settings.fill_image %}object-fit:contain{% endunless %}"
                          {% unless section.index == 1 and block == first_image %}
                            loading="lazy"
                          {% endunless %}
                          class="mobile-only"
                        >
                        <img
                          src="{{ block.settings.image | image_url: width: 768 }}"
                          srcset="{% render 'image-srcset', image: block.settings.image %}"
                          sizes="
                            {% if settings.width < 2000 %}(min-width: {{ settings.width }}px) calc({{ settings.width }}px * {{ percentage }}),{% endif %}
                            (min-width: 760px) {% if settings.width < 2000 %}{{ block.settings.image_width }}vw{% else %}calc(100vw * {{ percentage }}){% endif %},
                            {% if block.settings.image_mobile or block.settings.mobile_hide %}0{% elsif section.settings.layout_mobile == 'slideshow' %}0{% else %}100vw{% endif %}
                          "
                          alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                          width="640"
                          height="640"
                          style="object-position: {{ block.settings.image.presentation.focal_point }}; height: 100%!important;{% unless block.settings.fill_image %}object-fit:contain{% endunless %}"
                          class="                              mobile-hide"
                          {% unless section.index == 1 %}
                            loading="lazy"
                          {% endunless %}
                        >
                      </picture>
                    {% else %}
                      <picture>
                        <span
                          class="palette-{{ block.settings.color_palette }} module-color-palette img-overlay"
                          style="--overlay_opacity:{{ block.settings.overlay_opacity_img | divided_by: 100.0 }}"
                        ></span>
                        {{ 'lifestyle-' | append: 1 | placeholder_svg_tag: 'placeholder-svg' }}
                      </picture>
                    {% endif %}
                  </figure>
                  {% assign counter = counter | plus: 1 %}
                {%- when 'video' -%}
                  <figure
                    data-slide-index="{{ counter }}"
                    {{ block.shopify_attributes }}
                    class="
                      {% if block.settings.constrain %} constrain{% endif %}
                      {% if block.settings.mobile_hide %} mobile-hide{% endif %}
                      {{ section.settings.media_mobile_height }}-mobile
                      item-{{ forloop.index }}
                    "
                    style="
                      opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
                      left: {{ block.settings.horizontal_position }}%;
                      top: {{ block.settings.vertical_position }}%;
                      height: {% if block.settings.constrain %}auto{% else %}{{ block.settings.image_height }}%{% endif %};
                      width: {{ block.settings.image_width }}%;
                      transform: translate(-{{ block.settings.horizontal_position }}%, -{{ block.settings.vertical_position }}%);
                      --b2p: {{ block.settings.border_radius }}px;
                      {% if block.settings.constrain %}bottom: unset;{% endif %}
                      position: absolute;
                      z-index:-{{ forloop.length | minus: forloop.index0 }};
                      {% if section.settings.layout_mobile == 'slideshow' %}--b2p_mobile:{{ first_image.settings.border_radius }}px;{% else %}--b2p_mobile:{{ block.settings.border_radius }}px;{% endif %}
                    "
                  >
                    {% if block.settings.video %}
                      <picture>
                        {% if block.settings.enable_controls %}<a href="./" class="link-overlay"></a>{% endif %}
                        {%- liquid
                          assign source = block.settings.video.sources | where: 'height', 1080 | where: 'format', 'mp4' | first
                          if source == null
                            assign source = block.settings.video.sources | where: 'format', 'mp4' | first
                          endif
                          if source == null
                            assign source = block.settings.video.sources | where: 'format', 'mov' | first
                          endif
                          if source == null
                            assign source = block.settings.video.sources.first
                          endif
                        -%}
                        <video
                          {% if settings.enable_animations %}
                            data-sal="fade" data-sal-delay="{{ forloop.index0 | times: 100 }}"
                          {% endif %}
                          class="lazy next-video"
                          {% if block.settings.enable_controls %}
                            {%- if block.settings.video_mute %} muted{% endif -%}
                          {% else %}
                            autoplay muted
                          {% endif %}
                          loop
                          playsinline
                          poster="{{ block.settings.video.preview_image | image_url }}"
                          {% unless block.settings.fill_video %}
                            style="object-fit:contain"
                          {% endunless %}
                        >
                          <source data-src="{{ source.url }}" type="video/mp4">
                        </video>
                        {% if block.settings.enable_controls %}
                          <i aria-hidden="true" class="icon-play"></i>
                        {% endif %}
                      </picture>
                    {% else %}
                      <picture
                        {% if settings.enable_animations %}
                          data-sal="fade" data-sal-delay="{{ forloop.index0 | times: 100 }}"
                        {% endif %}
                      >
                        <span
                          class="palette-{{ block.settings.color_palette }} module-color-palette img-overlay"
                          style="opacity:{{ block.settings.overlay_opacity_img | divided_by: 100.0 }}"
                        ></span>
                        {{ 'lifestyle-' | append: 1 | placeholder_svg_tag: 'placeholder-svg' }}
                      </picture>
                    {% endif %}
                  </figure>
                  {% assign counter = counter | plus: 1 %}
              {%- endcase -%}
            {% endfor %}
          </div>
        {%- endif -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'content' -%}
              <div
                {% if settings.enable_animations %}
                  data-sal="fade" data-sal-delay="{{ forloop.index0 | times: 100 }}"
                {% endif %}
                {{ block.shopify_attributes }}
                class="
                  palette-{{ block.settings.background_color_palette }}
                  module-color-palette
                  palette-{{ block.settings.background_color_palette_mobile }}-mobile
                  item-{{ forloop.index }}
                  text-{{ block.settings.text_alignment }}
                  {% if block.settings.background_overlay_opacity == 0 or block.settings.enable_background == false %}no-padding{% endif %}
                  m6bx
                  margin-0
                  {% if block.settings.mobile_hide %} mobile-hide{% endif %}
                  {% if block.settings.constrain %} constrain{% endif %}
                "
                style="
                  --width: {% if block.settings.content_width == 2000 %}100%{% else %}{{ block.settings.content_width }}px{% endif %};
                  position: absolute;
                  left: {{ block.settings.horizontal_position }}%;
                  top: {{ block.settings.vertical_position }}%;
                  transform: translate(-{{ block.settings.horizontal_position }}%, -{{ block.settings.vertical_position }}%);
                  z-index: {{ forloop.index }};
                "
              >
                {% if block.settings.enable_background %}
                  <span
                    class="img-overlay"
                    style="
                      opacity: {{ block.settings.background_overlay_opacity | divided_by: 100.0 }};
                      border-radius: {{ block.settings.background_radius }}px;
                    "
                  >
                  </span>
                {% endif %}
                <div>
                  {%- if block.settings.title != empty -%}
                    <div
                      id="shopify-section-{{ section.id }}-title"
                      class="
                        title-styling
                        {% if block.settings.title_underline_style != 'none' %}
                          title-underline-none
                          {% if block.settings.title_underline_style contains 'accent' %}
                            title-underline-accent
                          {% elsif block.settings.title_underline_style contains 'gradient' %}
                            title-underline-gradient
                          {% endif %}
                          {% if block.settings.title_underline_style contains 'secondary_font' %}
                            title-underline-secondary-font
                          {% endif %}
                        {% endif %}
                      "
                      style="
                                                                                                                                                                                                                                 opacity: {{ block.settings.content_opacity | divided_by: 100.0 }};
                      "
                    >
                      {{ block.settings.title }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.text != empty -%}
                    <div
                      class="{% if block.settings.enable_custom_font_styling %}ff-{{ block.settings.text_font }}{% endif %}"
                      style="{% if block.settings.enable_custom_font_styling %}--main_fz:{{ block.settings.font_size }};font-size:var(--main_fz);{% endif %} opacity: {{ block.settings.content_opacity | divided_by: 100.0 }};"
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                  {%- liquid
                    assign first_link = false
                    assign first_show_link = false
                    assign second_link = false
                    assign second_show_link = false

                    if block.settings.show_first_link and block.settings.first_link_text != empty and block.settings.first_link_url != blank
                      assign first_link = true
                      assign first_button_color = block.settings.first_button_style | split: ' ' | first
                      assign first_button_style = block.settings.first_button_style | split: ' ' | last
                      if first_button_style == 'link'
                        assign first_show_link = true
                      endif
                    endif
                    if block.settings.show_second_link and block.settings.second_link_text != empty and block.settings.second_link_url != blank
                      assign second_link = true
                      assign second_button_color = block.settings.second_button_style | split: ' ' | first
                      assign second_button_style = block.settings.second_button_style | split: ' ' | last
                      if second_button_style == 'link'
                        assign second_show_link = true
                      endif
                    endif
                  -%}
                  {%- if first_link or second_link -%}
                    <p
                      class="link-btn"
                      style="--dist_ba: 20px;"
                    >
                      {% if first_link %}
                        <a
                          href="{{ block.settings.first_link_url }}"
                          class="overlay-{{ first_button_color }} {% if first_show_link %} strong inline{% else %} {{ first_button_style }}{% endif %}"
                        >
                          {% if block.settings.icon_1 -%}
                            {{-
                              block.settings.icon_1
                              | image_url: width: block.settings.icon_width_1
                              | image_tag: width: block.settings.icon_width_1
                            -}}
                          {%- endif %}
                          <span
                            {% if first_show_link %}
                              class="link-underline"
                            {% endif %}
                          >
                            {{- block.settings.first_link_text -}}
                            {% if first_show_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}
                          </span>
                        </a>
                      {% endif %}
                      {%- if second_link -%}
                        <a
                          href="{{ block.settings.second_link_url }}"
                          class="overlay-{{ second_button_color }} {% if second_show_link %} strong inline{% else %} {{ second_button_style }}{% endif %}"
                        >
                          {% if block.settings.icon_2 -%}
                            {{-
                              block.settings.icon_2
                              | image_url: width: block.settings.icon_width_2
                              | image_tag: width: block.settings.icon_width_2
                            -}}
                          {%- endif %}
                          <span
                            {% if second_show_link %}
                              class="link-underline"
                            {% endif %}
                          >
                            {{- block.settings.second_link_text -}}
                            {% if second_show_link -%}
                              &nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>
                            {%- endif %}
                          </span>
                        </a>
                      {%- endif -%}
                    </p>
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </article>
    </div>
  </div>
</article>

<style>
  {%- if section.settings.width == 'wide' and section.settings.transparent -%}
  html.no-js .shopify-section-header:has(#header-outer.transparent):has(+ #content > div:first-child[id$="{{ section.id }}"] > .flexible-section) {
    --top_main_bg: var(--{{ section.settings.background_color_palette }}_bg) !important;
    --top_main_fg: var(--{{ section.settings.background_color_palette | replace: '_gradient', '' }}_fg) !important;
    --menu_fg: var(--top_main_fg) !important;
  }
  #content div:first-child[id$="{{ section.id }}"] > .flexible-section {
      padding-top: 0!important;
  }
  {% endif %}

  @media only screen and (min-width: 761px) and (max-width: 1000px) {
    #shopify-section-{{ section.id }} .m6fr {
      --mh: {{ section.settings.custom_height_tablet }}dvw;
    }
  }
  @media only screen and (min-width: 1001px) {
    #shopify-section-{{ section.id }} .m6fr {
      --mh: {{ section.settings.custom_height }}dvw;
    }
  }

  #shopify-section-{{ section.id }} .module-color-palette:before { opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}; }
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  {%- for block in section.blocks -%}
    {% if block.settings.enable_custom_title_size %}
      #shopify-section-{{ section.id }} div.item-{{ forloop.index }} div[id$='title'] { container-type: inline-size; }
      #shopify-section-{{ section.id }} div.item-{{ forloop.index }} div[id$='title'] > *:first-child:is(h1, h2, h3, h4, h5, h6){
        font-size: {{ block.settings.custom_title_size | divided_by: 6 }}cqw;
      }
    {% endif %}
  {%- endfor -%}
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} > .m6bx { margin-bottom: {{ section.settings.spacing_desktop }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    #root .m6fr article.mobile-static [class*="media-flexible"] picture {
      aspect-ratio: unset!important;
    }
    #shopify-section-{{ section.id }} > .m6bx { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    {% if section.settings.layout_mobile == 'flexible' %}
      {% for block in section.blocks %}
        {% if block.type == "image" or block.type == 'video' %}
          {% if block.settings.mobile_sizes %}
            #shopify-section-{{ section.id }} .media-flexible > figure.item-{{ forloop.index }} {
              width: {{ block.settings.image_width_mobile }}%!important;
              {% if block.settings.constrain == false %}
                height: {{ block.settings.image_height_mobile }}%!important;
              {% endif %}
            }
          {% endif %}
        {% endif %}
      {% endfor %}
    {% endif %}
  }
</style>

{%- if section.settings.width == 'wide' and section.settings.transparent -%}
  <script>
    var html_tag = document.documentElement,
      root_styles = document.querySelector(':root'),
      content_id = document.getElementById('content'),
      header_outer = document.getElementById('header-outer'),
      ffa = content_id.children[0],
      ffc,
      ffd = false;
    if (ffa !== undefined) {
      ffc = ffa.children[0];
      if (
        ffa.classList.contains('shopify-section') &&
        header_outer.hasAttribute('data-transparent') &&
        ffa.id == 'shopify-section-' + '{{ section.id }}'
      ) {
        ffd = true;
      }
      if (
        (ffc !== undefined && ffc.classList.contains('m6bx') && ffc.classList.contains('wide')) ||
        (ffc !== undefined && ffc.classList.contains('m6fr') && ffc.classList.contains('wide'))
      ) {
        ffe = true;
      }
      if (document.querySelectorAll('.shopify-section-header ~ [class*="shopify-section-announcement-bar"]').length) {
        ffd = false;
      }
      if (ffd === true) {
        header_outer.classList.add('transparent');
        html_tag.classList.add('has-first-m6fr-wide');
        html_tag.classList.add('has-first-m6bx-wide');
        html_tag.classList.add('has-first-flexbile-wide');
        html_tag.classList.add('dm-ready');
        root_styles.style.setProperty(
          '--transparent_header_fg',
          'var(--{{ section.settings.background_color_palette }}_fg)'
        );
        root_styles.style.setProperty(
          '--transparent_header_fg_brightness',
          'var(--{{ section.settings.background_color_palette }}_fg_brightness)'
        );
        var brightness = getComputedStyle(document.documentElement).getPropertyValue(
          '--transparent_header_fg_brightness'
        );
        root_styles.style.setProperty('--transparent_header_fg_brightness', brightness);
        root_styles.style.setProperty(
          '--transparent_header_fg_hover',
          'var(--{{ section.settings.background_color_palette }}_btn_bg)'
        );
        root_styles.style.setProperty(
          '--transparent_header_bg',
          'var(--{{ section.settings.background_color_palette }}"_bg)'
        );
      }
    }
  </script>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.flexible.name",
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "transparent",
      "label": "t:sections.flexible.settings.transparent.label",
      "info": "t:sections.flexible.settings.transparent.info",
      "default": false
    },
    {
      "type": "header",
      "content": "t:global.background.header"
    },
    {
      "type": "color_scheme",
      "id": "background_color_palette",
      "label": "t:global.color_palette.label",
      "default": "scheme-8"
    },
    {
      "type": "range",
      "id": "background_overlay_opacity",
      "label": "t:global.background.background_overlay_opacity.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 75
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "t:global.background.background_position.label",
      "options": [
        {
          "value": "left",
          "label": "t:global.background.background_position.options__1.label"
        },
        {
          "value": "right",
          "label": "t:global.background.background_position.options__2.label"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "background_width",
      "label": "t:global.background.background_width.label",
      "info": "t:global.background.background_width.info",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "range",
      "id": "background_height",
      "label": "t:global.background.background_height.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "t:sections.flexible.settings.content.header"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:sections.flexible.settings.content.width.label",
      "options": [
        {
          "value": "boxed",
          "label": "t:sections.flexible.settings.content.width.options__1.label"
        },
        {
          "value": "wide",
          "label": "t:sections.flexible.settings.content.width.options__2.label"
        }
      ],
      "default": "wide"
    },
    {
      "type": "range",
      "id": "custom_height",
      "label": "t:sections.flexible.settings.content.custom_height.label",
      "min": 30,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "t:sections.flexible.settings.content.tablet.header"
    },
    {
      "type": "range",
      "id": "custom_height_tablet",
      "label": "t:sections.flexible.settings.content.tablet.custom_height_tablet.label",
      "min": 30,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 80
    },
    {
      "type": "header",
      "content": "t:global.background.mobile.header"
    },
    {
