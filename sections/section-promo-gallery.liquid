{%- liquid
  case section.settings.items_width
    when 1
      assign width_class = 'width-100'
    when 2
      assign width_class = 'width-50'
    when 3
      assign width_class = 'width-33'
    when 4
      assign width_class = 'width-25'
    when 5
      assign width_class = 'width-20'
  endcase

  assign last_blocks = section.blocks.size | modulo: section.settings.items_width
-%}

<article>
  <ul
    class="
      l4ft
      {% if section.settings.width == 'wide' %}fullwidth{% endif %}
      {% unless section.settings.image_zoom %}no-hover{% endunless %}
      {% if section.settings.layout_mobile == 'rows' %}mobile-scroll{% endif %}
      dont-move
    "
    style="--gutter: {{ settings.gutter }}; --spacing: {{ section.settings.space_between }}px;"
  >
    {% assign counter = 1 %}
    {%- for block in section.blocks -%}
      {%- liquid
        capture current
          cycle 1, 2
        endcapture
        assign blocks_left = forloop.length | minus: forloop.index
        assign items_per_row = section.settings.items_width
        if blocks_left < last_blocks
          assign width = 100 | divided_by: last_blocks
          assign different_width_class = 'width-' | append: width
          assign items_per_row = last_blocks
        else
          assign different_width_class = false
        endif
        if different_width_class
          assign img_width = width
        else
          assign img_width = width_class | remove: 'width-' | plus: 0
        endif
        assign border_class = ''
        if counter == 1
          assign border_class = 'first-in-row'
        elsif counter == items_per_row
          assign border_class = 'last-in-row'
        endif
      -%}
      <li
        class="
          block-{{ block.id }}
          item-{{ forloop.index }}
          {{ block.settings.text_position }}
          {% if different_width_class %}{{ different_width_class }}{% else %}{{ width_class }}{% endif %}
          has-content-box
          {{ section.settings.height }}
          {{ section.settings.mobile_height }}-mobile
          {{ border_class }}
        "
        {{ block.shopify_attributes }}
        {% if settings.enable_animations %}
          data-sal="fade" data-sal-duration="500" data-sal-delay="{{ forloop.index0 | times: 100 }}"
        {% endif %}
        style="{% if section.settings.enable_custom_height %}--mih_desktop: {{ section.settings.custom_height }}px;{% endif %}{% if block.settings.enable_custom_font_styling %}font-size:{{ block.settings.font_size }};{% endif %}"
      >
        {%- if counter == items_per_row -%}
          {% assign counter = 1 %}
        {%- else -%}
          {% assign counter = counter | plus: 1 %}
        {%- endif -%}
        {%- if block.settings.video or block.settings.image -%}
          <div class="palette-{{ block.settings.color_palette }} module-color-palette main empty">
            <figure>
              {%- if block.settings.video -%}
                {% if block.settings.enable_controls -%}
                  <a
                    href="./"
                    class="link-overlay"
                    aria-label="{{ block.settings.title | escape | default: "Play video" }}"
                  ></a>
                {%- endif %}
                <picture>
                  <span
                    class="img-overlay"
                    style="opacity:{{ block.settings.overlay_opacity_img | divided_by: 100.0 }}"
                  ></span>
                  {%- liquid
                    assign source = block.settings.video.sources | where: 'height', 1080 | where: 'format', 'mp4' | first
                    if source == null
                      assign source = block.settings.video.sources | where: 'format', 'mp4' | first
                    endif
                    if source == null
                      assign source = block.settings.video.sources | where: 'format', 'mov' | first
                    endif
                    if source == null
                      assign source = block.settings.video.sources.first
                    endif
                  -%}
                  <video
                    class="lazy next-video"
                    {% if block.settings.enable_controls %}
                      {%- if block.settings.video_mute %} muted{% endif -%}
                    {% else %}
                      autoplay muted
                    {% endif %}
                    loop
                    playsinline
                    poster="{{ block.settings.video.preview_image | image_url }}"
                  >
                    <source data-src="{{ source.url }}" type="video/mp4">
                  </video>
                </picture>
                {% if block.settings.enable_controls %}
                  <i aria-hidden="true" class="icon-play"></i>
                {% endif %}
              {% elsif block.settings.image %}
                <span
                  class="img-overlay"
                  style="opacity:{{ block.settings.overlay_opacity_img | divided_by: 100.0 }}"
                ></span>
                <picture>
                  <img
                    src="{{ block.settings.image | image_url: width: 620 }}"
                    srcset="{% render 'image-srcset', image: block.settings.image %}"
                    sizes="
                      {% if section.settings.width == 'boxed' or settings.width < 2000 %}
                        (min-width: 1300px) {% if img_width == 100 %}{{ settings.width }}px{% else %}calc({{ settings.width }}px * 0.{{ img_width }}){% endif %},
                      {% endif %}
                      (min-width: 1000px) {% if img_width == 100 %}100vw{% else %}calc(100vw * 0.{{ img_width }}){% endif %},
                      {% if section.settings.layout_mobile == 'compact' %}315px{% else %}100vw{% endif %}
                    "
                    width="620"
                    height="700"
                    alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                    style="object-position: {{ block.settings.image.presentation.focal_point }}"
                    {% unless section.index == 1 and forloop.index == 1 %}
                      loading="lazy"
                    {% endunless %}
                  >
                </picture>
              {% endif %}
            </figure>
            {%- unless block.settings.video -%}
              {%- if settings.banners_clickable
                and block.settings.link_url != blank
                and block.settings.link_text == blank
              -%}
                <a
                  class="link-overlay"
                  href="{{ block.settings.link_url }}"
                  aria-label="{{ block.settings.title | escape | default: block.settings.image.alt | default: "Promo banner" }}"
                ></a>
              {%- endif -%}
            {%- endunless -%}
          </div>
        {%- endif -%}
        <div
          class="
            palette-{{ block.settings.color_palette }}
            module-color-palette
            content box
            {% unless block.settings.video or block.settings.image %}no-img{% endunless %}
          "
        >
          <div>
            {%- if block.settings.title != empty -%}
              <div
                class="
                    heading
                  {% if block.settings.title_underline_style != 'none' %}
                    title-underline-none
                    {% if block.settings.title_underline_style contains 'accent' %}
                      title-underline-accent
                    {% elsif block.settings.title_underline_style contains 'gradient' %}
                      title-underline-gradient
                    {% endif %}
                    {% if block.settings.title_underline_style contains 'secondary_font' %}
                      title-underline-secondary-font
                    {% endif %}
                  {% endif %}
                "
              >
                {{ block.settings.title }}
              </div>
            {%- endif -%}
            {%- if block.settings.text != empty -%}
              <div>{{ block.settings.text }}</div>
            {%- endif -%}
            {%- if block.settings.show_link
              and block.settings.link_text != empty
              and block.settings.link_url != blank
            -%}
              {%- liquid
                assign button_color = block.settings.button_style | split: ' ' | first
                assign button_style = block.settings.button_style | split: ' ' | last
                assign is_link = false
                if button_style == 'link'
                  assign is_link = true
                endif
              -%}
              <p class="link-btn">
                <a
                  href="{{ block.settings.link_url }}"
                  class="overlay-{{ button_color }} {% if is_link %}strong inline{% else %}{{ button_style }}{% endif %}"
                >
                  <span
                    {% if is_link %}
                      class="link-underline"
                    {% endif %}
                  >
                    {{- block.settings.link_text -}}
                    &nbsp;{% if is_link %}&nbsp;<i aria-hidden="true" class="icon-arrow-right"></i>{% endif %}
                  </span>
                </a>
              </p>
            {%- endif %}
          </div>
        </div>
      </li>
    {%- endfor -%}
  </ul>
</article>

<style>
  {%- for block in section.blocks -%}
      #shopify-section-{{ section.id }} li.item-{{ forloop.index }} .module-color-palette.content:before { opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }}; }
  {%- endfor -%}
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_desktop | minus: section.settings.space_between }}px; }
  }
  @media only screen and (max-width: 47.5em) {
    {% if section.settings.layout_mobile == 'rows' %}
      #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    {% else %}
      #shopify-section-{{ section.id }} .l4ft { margin-bottom: {{ section.settings.spacing_mobile | minus: 16 }}px; }
    {% endif %}
  }
</style>

